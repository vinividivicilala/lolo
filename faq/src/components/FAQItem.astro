---
// components/FAQItem.astro
const { index, icon, question, answer } = Astro.props;
---

<div class="faq-item">
  <div class="faq-header">
    <div class="faq-index">{index}</div>
    <div class="faq-icon">{icon}</div>
    <div class="faq-question">{question}</div>
    <div class="faq-arrow">â–¼</div>
  </div>
  <div class="faq-answer">
    {answer}
  </div>
</div>

<style>
  .faq-item {
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .faq-header {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px;
    background: #f8fafc;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .faq-index {
    font-size: 1.5rem;
    font-weight: 700;
    color: #3b82f6;
    min-width: 30px;
  }
  
  .faq-icon {
    font-size: 1.8rem;
    min-width: 40px;
    text-align: center;
  }
  
  .faq-question {
    font-size: 1.4rem;
    font-weight: 700;
    color: #000;
    flex: 1;
    line-height: 1.4;
  }
  
  .faq-arrow {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
    color: #64748b;
  }
  
  .faq-answer {
    padding: 0 20px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease, padding 0.3s ease;
    font-size: 1.2rem;
    line-height: 1.6;
    color: #334155;
  }
  
  .faq-item.active .faq-answer {
    max-height: 200px;
    padding: 20px;
  }
  
  .faq-item.active .faq-arrow {
    transform: rotate(180deg);
  }
  
  @media (max-width: 768px) {
    .faq-header {
      padding: 15px;
      gap: 12px;
    }
    
    .faq-index {
      font-size: 1.3rem;
      min-width: 25px;
    }
    
    .faq-icon {
      font-size: 1.5rem;
      min-width: 35px;
    }
    
    .faq-question {
      font-size: 1.2rem;
    }
    
    .faq-answer {
      font-size: 1.1rem;
    }
  }
  
  @media (max-width: 480px) {
    .faq-header {
      padding: 12px;
      gap: 10px;
    }
    
    .faq-index {
      font-size: 1.1rem;
      min-width: 20px;
    }
    
    .faq-icon {
      font-size: 1.3rem;
      min-width: 30px;
    }
    
    .faq-question {
      font-size: 1rem;
    }
    
    .faq-answer {
      font-size: 1rem;
    }
  }
</style>
