---
const { question, answer, label, date } = Astro.props;
---

<div class="faq-item-modal">
  <!-- Judul -->
  <div class="faq-box faq-title-box">
    <h2>{question}</h2>
  </div>

  <!-- Tanggal -->
  {date && (
    <div class="faq-box faq-date-box">
      <span class="faq-date">ðŸ•’ {date}</span>
    </div>
  )}

  <!-- Label -->
  {label && (
    <div class="faq-box faq-label-box">
      <span class="faq-label">{label}</span>
    </div>
  )}

  <!-- Deskripsi -->
  <div class="faq-box faq-description-box">
    <p>{answer}</p>
  </div>
</div>

<style>
.faq-item-modal {
  display: flex;
  flex-direction: column;
  gap: 14px;
  padding: 20px;
  font-family: "Space Mono", monospace;
}

.faq-box {
  border: 2px solid #000;   /* âœ… kotak garis hitam */
  border-radius: 6px;
  padding: 14px 16px;
  background: #fff;
  box-shadow: 2px 2px 0 #000; /* efek 3D retro */
}

/* Judul */
.faq-title-box h2 {
  margin: 0;
  font-size: 20px;
  font-weight: 700;
  text-transform: uppercase;
}

/* Tanggal */
.faq-date {
  font-size: 14px;
  color: #333;
}

/* Label */
.faq-label {
  font-size: 14px;
  font-weight: bold;
  color: #fff;
  background: #d32f2f;
  padding: 4px 8px;
  border-radius: 4px;
}

/* Deskripsi */
.faq-description-box p {
  margin: 0;
  font-size: 15px;
  line-height: 1.6;
  color: #222;
}
</style>
