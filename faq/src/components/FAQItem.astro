---
const { icon, question, index, answer, date, label } = Astro.props;
---

<div class="faq-item" data-framer>
  <!-- Highlight -->
  <div class="faq-highlight">
    <div class="faq-number">{index}</div>
    <div class="faq-icon">{icon || "‚ùì"}</div>
  </div>

  <!-- Judul -->
  <div class="faq-title-box">
    <h2>
      <button class="faq-toggle" aria-expanded="false">
        <svg class="arrow-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      {question}
    </h2>
  </div>

  <!-- Label Baru -->
  {label && (
    <div class="faq-label-box">
      <span class="faq-label">{label}</span>
    </div>
  )}

  <!-- Tanggal -->
  {date && (
    <div class="faq-date-box">
      <span class="faq-date">üìÖ {date}</span>
    </div>
  )}

  <!-- Jawaban -->
  <div class="faq-answer-box">
    <div class="faq-answer">
      {answer && <Fragment set:html={answer} />}
    </div>
  </div>
</div>

<style>
.faq-item {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin: 20px 0;
}

/* highlight */
.faq-highlight {
  display: flex;
  align-items: center;
  gap: 10px;
  border: 2px solid #000;
  padding: 8px;
  border-radius: 6px;
}

/* judul */
.faq-title-box {
  border: 2px solid #000;
  padding: 10px;
  border-radius: 6px;
  background: #f9f9f9;
}

/* label */
.faq-label-box {
  border: 2px solid #000;
  padding: 6px 10px;
  border-radius: 6px;
  background: #ffe66d;
  display: inline-block;
  width: fit-content;
}

/* tanggal */
.faq-date-box {
  border: 2px solid #000;
  padding: 8px;
  border-radius: 6px;
  font-size: 0.9rem;
  background: #f1f1f1;
}

/* jawaban */
.faq-answer-box {
  border: 2px solid #000;
  padding: 12px;
  border-radius: 6px;
  background: #fff;
}
</style>
