---
const { question, icon = "‚ùì" } = Astro.props;
---

<div class="faq-item">
  <div class="faq-icon">{icon}</div>
  <div>
    <h2>{question}</h2>
    <div class="faq-answer">
      <slot />
    </div>
  </div>
</div>

<style>
.faq-item {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  margin: 20px 0;
  padding: 15px;
  border-radius: 10px;
  background: white;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.faq-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 12px rgba(0,0,0,0.15);
}
.faq-icon {
  font-size: 1.8rem;
}
h2 {
  margin: 0;
  font-size: 1.2rem;
}
.faq-answer {
  margin-top: 6px;
  color: #555;
}
</style>
