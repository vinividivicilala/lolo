---
const { icon, question, index, answer } = Astro.props;
---

<div class="faq-item" data-framer>
  <!-- Highlight / nomor + icon -->
  <div class="faq-highlight">
    <div class="faq-number">{index}</div>
    <div class="faq-icon">{icon || "‚ùì"}</div>
  </div>

  <!-- Judul -->
  <div class="faq-title-box">
    <h2>
      <button class="faq-toggle" aria-expanded="false">
        <svg class="arrow-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      {question}
    </h2>
  </div>

  <!-- Blok warna baru (contoh label "BARU") -->
  <div class="faq-label-box">
    <span class="faq-label">BARU</span>
  </div>

  <!-- Tanggal dan jam -->
  <div class="faq-date-box">
    <span class="faq-date">üìÖ 3 November 2023, 17:30 WIB</span>
  </div>

  <!-- Deskripsi / Jawaban -->
  <div class="faq-answer-box">
    <div class="faq-answer">
      {answer && <Fragment set:html={answer} />}
    </div>
  </div>
</div>
