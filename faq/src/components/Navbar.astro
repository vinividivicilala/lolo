---
const { currentPage = 'home' } = Astro.props;
---

<nav class="navbar">
  <div class="nav-container">
    <!-- Logo dengan foto dan nama -->
    <div class="nav-logo">
      <div class="logo-image">
        <!-- Ganti dengan path foto Anda -->
        <img src="images/5.jpg" alt="Farid" />
      </div>
      <div class="logo-text">
        <span class="logo-name">Note Farid</span>
        <span class="logo-subtitle">Portfolio</span>
      </div>
    </div>

    <!-- Menu tengah -->
    <ul class="nav-menu">
      <li class="nav-item">
        <a href="/" class={`nav-link ${currentPage === 'home' ? 'active' : ''}`}>
          Home
          <svg class="menu-arrow" width=35" height="35" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 17L17 7M17 7H8M17 7V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </li>
      <li class="nav-item">
        <a href="/faq" class={`nav-link ${currentPage === 'faq' ? 'active' : ''}`}>
          FAQ
          <svg class="menu-arrow" width="35" height="35" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 17L17 7M17 7H8M17 7V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </li>
      <li class="nav-item">
        <a href="/blog" class={`nav-link ${currentPage === 'blog' ? 'active' : ''}`}>
          Blog
          <svg class="menu-arrow" width="35" height="35" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 17L17 7M17 7H8M17 7V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </li>
    </ul>

    <!-- Tombol kanan -->
    <div class="nav-actions">
      <button class="contact-btn">Get in Touch</button>
    </div>

    <!-- Hamburger untuk mobile -->
    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</nav>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }

  /* Navbar Normal (tanpa scroll) */
  .navbar {
    background: transparent;
    padding: 2rem 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    border-radius: 0px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    transform-origin: top;
    box-shadow: none;
    border: none;
  }
  
  /* Navbar Saat Scroll - DESIGN YANG SUDAH ANDA SUKA */
  .navbar.scrolled {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 1.5rem 0;
    border-radius: 16px;
    margin: 1rem auto;
    width: 90%;
    max-width: 1200px;
    box-shadow: 
      0 4px 20px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.08);
    left: 50%;
    transform: translateX(-50%);
  }
  
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .nav-container {
    padding: 0 2rem;
  }
  
  /* Logo Styles */
  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.4s ease;
  }
  
  .logo-image {
    width: 90px;
    height: 90px;
    border-radius: 20px;
    overflow: hidden;
    border: 2px solid transparent;
    transition: all 0.4s ease;
    background: transparent;
  }
  
  .navbar.scrolled .logo-image {
    width: 60px;
    height: 60px;
    border-radius: 15px;
  }
  
  .logo-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 18px;
  }
  
  .navbar.scrolled .logo-image img {
    border-radius: 13px;
  }
  
  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }
  
  .logo-name {
    font-size: 42px;
    font-weight: 700;
    color: #000;
    font-family: 'Inter', sans-serif;
    letter-spacing: -0.01em;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .logo-name {
    font-size: 2.2rem;
  }
  
  .logo-subtitle {
    font-size: 1.1rem;
    font-weight: 500;
    color: #666;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.02em;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .logo-subtitle {
    font-size: 1rem;
  }
  
  /* Menu Styles */
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
    transition: all 0.4s ease;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .navbar.scrolled .nav-menu {
    gap: 2.5rem;
  }
  
  .nav-link {
    color: #000;
    text-decoration: none;
    font-weight: 600;
    padding: 0.5rem 0;
    transition: all 0.3s ease;
    position: relative;
    font-family: 'Inter', sans-serif;
    font-size: 1.3rem;
    letter-spacing: -0.01em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .navbar.scrolled .nav-link {
    font-size: 1.2rem;
  }
  
  /* Menu Arrow Icon */
  .menu-arrow {
    color: #888;
    transition: all 0.3s ease;
    opacity: 0.8;
  }
  
  .navbar.scrolled .menu-arrow {
    width: 14px;
    height: 14px;
  }
  
  /* Hover effects */
  .nav-link:hover {
    color: #333;
    transform: translateY(-1px);
  }
  
  .nav-link:hover .menu-arrow {
    color: #000;
    opacity: 1;
    transform: translate(2px, -2px);
  }
  
  .nav-link.active {
    color: #000;
    font-weight: 700;
  }
  
  .nav-link.active .menu-arrow {
    color: #000;
    opacity: 1;
  }
  
  /* Button Styles */
  .nav-actions {
    display: flex;
    align-items: center;
    transition: all 0.4s ease;
  }
  
  .contact-btn {
    background: #000;
    color: #fff;
    border: none;
    padding: 0.85rem 1.75rem;
    border-radius: 10px;
    font-family: 'Inter', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: -0.01em;
  }
  
  .navbar.scrolled .contact-btn {
    padding: 0.8rem 1.6rem;
    font-size: 1.05rem;
  }
  
  .contact-btn:hover {
    background: #333;
    transform: translateY(-2px);
  }
  
  /* Hamburger Menu */
  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    transition: all 0.4s ease;
    padding: 0.5rem;
    gap: 4px;
  }
  
  .navbar.scrolled .hamburger {
    transform: scale(1);
  }
  
  .bar {
    width: 25px;
    height: 2px;
    background: #000;
    transition: 0.3s;
    border-radius: 1px;
  }
  
  .hamburger.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  
  .hamburger.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }
  
  /* Responsive Design */
  @media (max-width: 968px) {
    .nav-menu {
      gap: 2rem;
      position: static;
      transform: none;
    }
    
    .nav-actions {
      display: none;
    }
  }
  
  @media (max-width: 768px) {
    .navbar {
      padding: 1.5rem 0;
    }
    
    .navbar.scrolled {
      margin: 0.8rem auto;
      width: 95%;
      border-radius: 12px;
      padding: 1.2rem 0;
      left: 50%;
      transform: translateX(-50%);
    }
    
    .nav-container {
      padding: 0 1.5rem;
    }
    
    .navbar.scrolled .nav-container {
      padding: 0 1.5rem;
    }
    
    .hamburger {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 0;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      width: 100%;
      height: 100vh;
      text-align: left;
      transition: 0.4s;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      padding: 6rem 2rem 2rem;
      gap: 0;
      z-index: 999;
      border-radius: 0;
    }
    
    .nav-menu.active {
      left: 0;
    }
    
    .nav-item {
      margin: 1rem 0;
    }
    
    .nav-link {
      font-size: 1.3rem;
      padding: 0.75rem 0;
      justify-content: space-between;
    }
    
    .menu-arrow {
      width: 35px;
      height: 35px;
    }

    /* Hide logo text on mobile */
    .logo-text {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('.nav-menu');
    const navbar = document.querySelector('.navbar');
    const navLinks = document.querySelectorAll('.nav-link');
    
    // Navbar scroll effects
    let lastScrollY = window.scrollY;
    let ticking = false;
    
    function updateNavbar() {
      const currentScrollY = window.scrollY;
      
      // Calculate scroll progress (0 to 1)
      const scrollProgress = Math.min(currentScrollY / 100, 1); // Max effect at 100px scroll
      
      // Update navbar classes based on scroll progress
      if (scrollProgress > 0.1) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      lastScrollY = currentScrollY;
      ticking = false;
    }
    
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    }
    
    // Listen to scroll events
    window.addEventListener('scroll', onScroll, { passive: true });
    
    // Initial update
    updateNavbar();
    
    // Hamburger menu functionality
    if (hamburger) {
      hamburger.addEventListener('click', function() {
        hamburger.classList.toggle('active');
        navMenu.classList.toggle('active');
        
        // Disable/enable scroll when menu is open (mobile)
        if (window.innerWidth <= 768) {
          if (navMenu.classList.contains('active')) {
            document.body.style.overflow = 'hidden';
          } else {
            document.body.style.overflow = '';
          }
        }
      });
    }
    
    // Close menu when clicking on a link
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      });
    });
    
    // Close menu when clicking outside (mobile)
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 768 && 
          !navbar.contains(e.target) && 
          navMenu.classList.contains('active')) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
    
    // Handle resize events
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });
</script>


