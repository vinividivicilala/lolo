---
const { currentPage = 'faq' } = Astro.props;
---

<nav class="navbar">
  <div class="nav-container">
    <div class="nav-logo">
      <a href="/">Note Farid</a>
    </div>
    <ul class="nav-menu">
      <li class="nav-item">
        <a href="/" class={`nav-link ${currentPage === 'home' ? 'active' : ''}`}>Home</a>
      </li>
      <li class="nav-item">
        <a href="/faq" class={`nav-link ${currentPage === 'faq' ? 'active' : ''}`}>FAQ</a>
      </li>
      <li class="nav-item">
        <a href="/blog" class={`nav-link ${currentPage === 'blog' ? 'active' : ''}`}>Blog</a>
      </li>
    </ul>
    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</nav>

<style>
  .navbar {
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    border-radius: 0px;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transform-origin: top;
  }
  
  .navbar.scrolled {
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    padding: 0.8rem 0;
    border-radius: 20px;
    margin: 10px 20px 0 20px;
    width: calc(100% - 40px);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transform: scale(0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .navbar.scrolled.more {
    padding: 0.6rem 0;
    border-radius: 25px;
    transform: scale(0.92);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .nav-container {
    padding: 0 25px;
  }
  
  .nav-logo a {
    color: white;
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .nav-logo a {
    font-size: 1.5rem;
  }
  
  .navbar.scrolled.more .nav-logo a {
    font-size: 1.4rem;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .nav-menu {
    gap: 1.5rem;
  }
  
  .nav-link {
    color: white;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    font-size: 1rem;
  }
  
  .navbar.scrolled .nav-link {
    padding: 0.4rem 0.8rem;
    font-size: 0.9rem;
    border-radius: 6px;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #fff, rgba(255,255,255,0.5));
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
  
  .nav-link:hover, .nav-link.active {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
  }
  
  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .hamburger {
    transform: scale(0.9);
  }
  
  .bar {
    width: 25px;
    height: 3px;
    background: white;
    margin: 3px 0;
    transition: 0.3s;
    border-radius: 2px;
  }
  
  .hamburger.active .bar:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }
  
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  
  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
  
  @media (max-width: 768px) {
    .navbar {
      padding: 1rem 0;
      margin: 0;
      width: 100%;
    }
    
    .navbar.scrolled {
      margin: 8px 15px 0 15px;
      width: calc(100% - 30px);
      border-radius: 15px;
      padding: 0.7rem 0;
    }
    
    .navbar.scrolled.more {
      border-radius: 18px;
      padding: 0.5rem 0;
    }
    
    .hamburger {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 0;
      flex-direction: column;
      background: rgba(0, 0, 0, 0.95);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      width: 100%;
      height: 100vh;
      text-align: center;
      transition: 0.4s;
      box-shadow: 0 10px 27px rgba(0,0,0,0.05);
      padding: 2rem 0;
      gap: 0;
      z-index: 999;
      border-radius: 0;
    }
    
    .nav-menu.active {
      left: 0;
    }
    
    .nav-item {
      margin: 1.5rem 0;
    }
    
    .navbar.scrolled .nav-container {
      padding: 0 20px;
    }
  }
  
  /* Efek blur untuk konten di belakang navbar */
  .navbar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    backdrop-filter: inherit;
    -webkit-backdrop-filter: inherit;
    z-index: -1;
    border-radius: inherit;
  }
</style>

<script>
  import Lenis from '@studio-freight/lenis';
  
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('.nav-menu');
    const navbar = document.querySelector('.navbar');
    const navLinks = document.querySelectorAll('.nav-link');
    
    // Initialize Lenis smooth scroll
    const lenis = new Lenis({
      duration: 1.2,
      easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
      orientation: 'vertical',
      gestureOrientation: 'vertical',
      smoothWheel: true,
    });
    
    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }
    
    requestAnimationFrame(raf);
    
    // Navbar scroll effects dengan progress-based animation
    let lastScrollY = window.scrollY;
    let scrollProgress = 0;
    
    function updateNavbar() {
      const currentScrollY = window.scrollY;
      const scrollDelta = currentScrollY - lastScrollY;
      
      // Calculate scroll progress (0 to 1)
      scrollProgress = Math.min(currentScrollY / 300, 1); // Max effect at 300px scroll
      
      // Update navbar classes based on scroll progress
      if (scrollProgress > 0.1) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      if (scrollProgress > 0.6) {
        navbar.classList.add('more');
      } else {
        navbar.classList.remove('more');
      }
      
      // Apply dynamic scaling based on scroll progress
      const scale = 1 - (scrollProgress * 0.08); // Scale down up to 8%
      const borderRadius = scrollProgress * 25; // Up to 25px border radius
      const padding = 1.5 - (scrollProgress * 0.9); // Reduce padding from 1.5rem to 0.6rem
      
      // Apply dynamic styles
      navbar.style.setProperty('--scale', scale);
      navbar.style.setProperty('--border-radius', `${borderRadius}px`);
      navbar.style.setProperty('--padding', `${padding}rem`);
      
      lastScrollY = currentScrollY;
    }
    
    // Listen to Lenis scroll events
    lenis.on('scroll', (e) => {
      updateNavbar();
    });
    
    // Initial update
    updateNavbar();
    
    // Hamburger menu functionality
    if (hamburger) {
      hamburger.addEventListener('click', function() {
        hamburger.classList.toggle('active');
        navMenu.classList.toggle('active');
        
        // Disable/enable scroll when menu is open (mobile)
        if (window.innerWidth <= 768) {
          if (navMenu.classList.contains('active')) {
            document.body.style.overflow = 'hidden';
            lenis.stop();
          } else {
            document.body.style.overflow = '';
            lenis.start();
          }
        }
      });
    }
    
    // Close menu when clicking on a link
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
        lenis.start();
        
        // Smooth scroll untuk anchor links
        const href = link.getAttribute('href');
        if (href.startsWith('#')) {
          const target = document.querySelector(href);
          if (target) {
            lenis.scrollTo(target, {
              offset: -100,
              duration: 1.5
            });
          }
        }
      });
    });
    
    // Close menu when clicking outside (mobile)
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 768 && 
          !navbar.contains(e.target) && 
          navMenu.classList.contains('active')) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
        lenis.start();
      }
    });
    
    // Handle resize events
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
        lenis.start();
      }
    });
  });
</script>
