---
const { currentPage = 'faq' } = Astro.props;
---

<nav class="navbar">
  <div class="nav-container">
    <div class="nav-logo">
      <img src="/images/5.jpg" alt="Logo" class="logo-image" />
      <a href="/">Note Farid</a>
    </div>
    <ul class="nav-menu">
      <li class="nav-item">
        <a href="/" class={`nav-link ${currentPage === 'home' ? 'active' : ''}`}>Home</a>
      </li>
      <li class="nav-item">
        <a href="/faq" class={`nav-link ${currentPage === 'faq' ? 'active' : ''}`}>FAQ</a>
      </li>
      <li class="nav-item">
        <a href="/blog" class={`nav-link ${currentPage === 'blog' ? 'active' : ''}`}>Blog</a>
      </li>
    </ul>
    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</nav>

<style>
  .navbar {
    background: rgba(34, 139, 34, 0.95);
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
    padding: 1.8rem 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    border-radius: 0px;
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    transform-origin: top;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .navbar.scrolled {
    background: rgba(34, 139, 34, 0.85);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    padding: 0.8rem 0;
    border-radius: 20px;
    margin: 15px 25px 0 25px;
    width: calc(100% - 50px);
    box-shadow: 
      0 10px 40px rgba(0, 0, 0, 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
    transform: translateY(0) scale(0.92);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }
  
  .navbar.scrolled.more {
    padding: 0.6rem 0;
    border-radius: 25px;
    transform: translateY(0) scale(0.88);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    margin: 12px 20px 0 20px;
    width: calc(100% - 40px);
  }
  
  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.5s ease;
  }
  
  .navbar.scrolled .nav-container {
    padding: 0 25px;
  }
  
  .navbar.scrolled.more .nav-container {
    padding: 0 20px;
  }
  
  .nav-logo {
    display: flex;
    align-items: center;
    gap: 15px;
    transition: all 0.5s ease;
  }
  
  .logo-image {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    object-fit: cover;
    transition: all 0.5s ease;
    border: 2px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }
  
  .navbar.scrolled .logo-image {
    width: 45px;
    height: 45px;
    border-radius: 10px;
  }
  
  .navbar.scrolled.more .logo-image {
    width: 40px;
    height: 40px;
    border-radius: 8px;
  }
  
  .nav-logo a {
    color: white;
    font-size: 2.2rem;
    font-weight: 700;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    transition: all 0.5s ease;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .navbar.scrolled .nav-logo a {
    font-size: 1.8rem;
  }
  
  .navbar.scrolled.more .nav-logo a {
    font-size: 1.6rem;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    transition: all 0.5s ease;
  }
  
  .navbar.scrolled .nav-menu {
    gap: 2rem;
  }
  
  .navbar.scrolled.more .nav-menu {
    gap: 1.5rem;
  }
  
  .nav-link {
    color: white;
    text-decoration: none;
    font-weight: 600;
    padding: 0.7rem 1.2rem;
    border-radius: 10px;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    font-size: 1.1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .navbar.scrolled .nav-link {
    padding: 0.6rem 1rem;
    font-size: 1rem;
    border-radius: 8px;
  }
  
  .navbar.scrolled.more .nav-link {
    padding: 0.5rem 0.9rem;
    font-size: 0.95rem;
    border-radius: 7px;
  }
  
  .nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }
  
  .nav-link:hover::before {
    left: 100%;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, #fff, rgba(255,255,255,0.7));
    transition: width 0.4s ease;
    border-radius: 2px;
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
  
  .nav-link:hover, .nav-link.active {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
  }
  
  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    transition: all 0.4s ease;
    padding: 5px;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.1);
  }
  
  .navbar.scrolled .hamburger {
    transform: scale(0.9);
  }
  
  .navbar.scrolled.more .hamburger {
    transform: scale(0.85);
  }
  
  .bar {
    width: 28px;
    height: 3px;
    background: white;
    margin: 3px 0;
    transition: 0.4s;
    border-radius: 3px;
  }
  
  .hamburger.active .bar:nth-child(1) {
    transform: translateY(9px) rotate(45deg);
  }
  
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  
  .hamburger.active .bar:nth-child(3) {
    transform: translateY(-9px) rotate(-45deg);
  }
  
  @media (max-width: 768px) {
    .navbar {
      padding: 1.2rem 0;
      margin: 0;
      width: 100%;
    }
    
    .navbar.scrolled {
      margin: 10px 15px 0 15px;
      width: calc(100% - 30px);
      border-radius: 18px;
      padding: 0.8rem 0;
    }
    
    .navbar.scrolled.more {
      border-radius: 20px;
      padding: 0.6rem 0;
      margin: 8px 12px 0 12px;
      width: calc(100% - 24px);
    }
    
    .nav-container {
      padding: 0 20px;
    }
    
    .navbar.scrolled .nav-container {
      padding: 0 18px;
    }
    
    .navbar.scrolled.more .nav-container {
      padding: 0 15px;
    }
    
    .logo-image {
      width: 50px;
      height: 50px;
    }
    
    .navbar.scrolled .logo-image {
      width: 40px;
      height: 40px;
    }
    
    .navbar.scrolled.more .logo-image {
      width: 35px;
      height: 35px;
    }
    
    .nav-logo a {
      font-size: 1.8rem;
    }
    
    .navbar.scrolled .nav-logo a {
      font-size: 1.5rem;
    }
    
    .navbar.scrolled.more .nav-logo a {
      font-size: 1.3rem;
    }
    
    .hamburger {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 0;
      flex-direction: column;
      background: rgba(34, 139, 34, 0.98);
      backdrop-filter: blur(25px);
      -webkit-backdrop-filter: blur(25px);
      width: 100%;
      height: 100vh;
      text-align: center;
      transition: 0.5s;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      padding: 5rem 0;
      gap: 0;
      z-index: 999;
      border-radius: 0;
    }
    
    .nav-menu.active {
      left: 0;
    }
    
    .nav-item {
      margin: 2rem 0;
    }
    
    .nav-link {
      font-size: 1.2rem;
      padding: 1rem 2rem;
    }
  }
  
  /* Efek blur untuk konten di belakang navbar */
  .navbar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    backdrop-filter: inherit;
    -webkit-backdrop-filter: inherit;
    z-index: -1;
    border-radius: inherit;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('.nav-menu');
    const navbar = document.querySelector('.navbar');
    const navLinks = document.querySelectorAll('.nav-link');
    
    // Navbar scroll effects
    let lastScrollY = window.scrollY;
    let ticking = false;
    
    function updateNavbar() {
      const currentScrollY = window.scrollY;
      
      // Calculate scroll progress (0 to 1)
      const scrollProgress = Math.min(currentScrollY / 200, 1); // Max effect at 200px scroll
      
      // Update navbar classes based on scroll progress
      if (scrollProgress > 0.1) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      if (scrollProgress > 0.5) {
        navbar.classList.add('more');
      } else {
        navbar.classList.remove('more');
      }
      
      lastScrollY = currentScrollY;
      ticking = false;
    }
    
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    }
    
    // Listen to scroll events
    window.addEventListener('scroll', onScroll, { passive: true });
    
    // Initial update
    updateNavbar();
    
    // Hamburger menu functionality
    if (hamburger) {
      hamburger.addEventListener('click', function() {
        hamburger.classList.toggle('active');
        navMenu.classList.toggle('active');
        
        // Disable/enable scroll when menu is open (mobile)
        if (window.innerWidth <= 768) {
          if (navMenu.classList.contains('active')) {
            document.body.style.overflow = 'hidden';
          } else {
            document.body.style.overflow = '';
          }
        }
      });
    }
    
    // Close menu when clicking on a link
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      });
    });
    
    // Close menu when clicking outside (mobile)
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 768 && 
          !navbar.contains(e.target) && 
          navMenu.classList.contains('active')) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
    
    // Handle resize events
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });
</script>
