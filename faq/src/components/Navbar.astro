---
const { currentPage = 'about' } = Astro.props;
---

<nav class="navbar">
  <div class="nav-container">
    <div class="nav-logo">
      <span class="logo-ampersand">&</span>
      <div class="logo-text">
        <span class="logo-name">Noah Pham</span>
        <span class="logo-subtitle">Portfolio</span>
      </div>
    </div>
    <ul class="nav-menu">
      <li class="nav-item">
        <a href="/about" class={`nav-link ${currentPage === 'about' ? 'active' : ''}`}>
          <span class="link-number">01</span>
          About
        </a>
      </li>
      <li class="nav-item">
        <a href="/projects" class={`nav-link ${currentPage === 'projects' ? 'active' : ''}`}>
          <span class="link-number">02</span>
          Projects
        </a>
      </li>
      <li class="nav-item">
        <a href="/resume" class={`nav-link ${currentPage === 'resume' ? 'active' : ''}`}>
          <span class="link-number">03</span>
          Resume
        </a>
      </li>
    </ul>
    <div class="nav-actions">
      <button class="contact-btn">Get in Touch</button>
    </div>
    <div class="hamburger">
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</nav>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }

  .navbar {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
    padding: 2rem 0;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    border-radius: 0px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    transform-origin: top;
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.05);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  
  .navbar.scrolled {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    padding: 1rem 0;
    border-radius: 16px;
    margin: 1rem 2rem 0 2rem;
    width: calc(100% - 4rem);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.08),
      0 2px 4px rgba(0, 0, 0, 0.02);
    transform: translateY(0) scale(0.95);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }
  
  .navbar.scrolled.more {
    padding: 0.8rem 0;
    border-radius: 20px;
    transform: translateY(0) scale(0.92);
    backdrop-filter: blur(25px);
    -webkit-backdrop-filter: blur(25px);
    margin: 0.8rem 1.5rem 0 1.5rem;
    width: calc(100% - 3rem);
  }
  
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .nav-container {
    padding: 0 1.5rem;
  }
  
  .navbar.scrolled.more .nav-container {
    padding: 0 1.25rem;
  }
  
  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.4s ease;
  }
  
  .logo-ampersand {
    font-size: 2rem;
    font-weight: 400;
    color: #000;
    font-family: 'Georgia', serif;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .logo-ampersand {
    font-size: 1.75rem;
  }
  
  .navbar.scrolled.more .logo-ampersand {
    font-size: 1.5rem;
  }
  
  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }
  
  .logo-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #000;
    font-family: 'Inter', sans-serif;
    letter-spacing: -0.01em;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .logo-name {
    font-size: 1.1rem;
  }
  
  .navbar.scrolled.more .logo-name {
    font-size: 1rem;
  }
  
  .logo-subtitle {
    font-size: 0.75rem;
    font-weight: 400;
    color: #666;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.02em;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .logo-subtitle {
    font-size: 0.7rem;
  }
  
  .navbar.scrolled.more .logo-subtitle {
    font-size: 0.65rem;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2.5rem;
    margin: 0;
    padding: 0;
    transition: all 0.4s ease;
  }
  
  .navbar.scrolled .nav-menu {
    gap: 2rem;
  }
  
  .navbar.scrolled.more .nav-menu {
    gap: 1.75rem;
  }
  
  .nav-link {
    color: #000;
    text-decoration: none;
    font-weight: 450;
    padding: 0.5rem 0;
    transition: all 0.3s ease;
    position: relative;
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    letter-spacing: -0.01em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .navbar.scrolled .nav-link {
    font-size: 0.9rem;
  }
  
  .navbar.scrolled.more .nav-link {
    font-size: 0.85rem;
  }
  
  .link-number {
    font-size: 0.75rem;
    color: #888;
    font-weight: 400;
    transition: all 0.3s ease;
  }
  
  .navbar.scrolled .link-number {
    font-size: 0.7rem;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 1px;
    background: #000;
    transition: width 0.3s ease;
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }
  
  .nav-link:hover .link-number,
  .nav-link.active .link-number {
    color: #000;
  }
  
  .nav-actions {
    display: flex;
    align-items: center;
    transition: all 0.4s ease;
  }
  
  .contact-btn {
    background: #000;
    color: #fff;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    font-weight: 450;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: -0.01em;
  }
  
  .navbar.scrolled .contact-btn {
    padding: 0.6rem 1.25rem;
    font-size: 0.85rem;
    border-radius: 6px;
  }
  
  .navbar.scrolled.more .contact-btn {
    padding: 0.5rem 1.1rem;
    font-size: 0.8rem;
  }
  
  .contact-btn:hover {
    background: #333;
    transform: translateY(-1px);
  }
  
  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    transition: all 0.4s ease;
    padding: 0.5rem;
    gap: 3px;
  }
  
  .navbar.scrolled .hamburger {
    transform: scale(0.9);
  }
  
  .bar {
    width: 20px;
    height: 1.5px;
    background: #000;
    transition: 0.3s;
    border-radius: 1px;
  }
  
  .hamburger.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(4px, 4px);
  }
  
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  
  .hamburger.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(4px, -4px);
  }
  
  @media (max-width: 968px) {
    .nav-menu {
      gap: 2rem;
    }
    
    .nav-actions {
      display: none;
    }
  }
  
  @media (max-width: 768px) {
    .navbar {
      padding: 1.5rem 0;
    }
    
    .navbar.scrolled {
      margin: 0.8rem 1rem 0 1rem;
      width: calc(100% - 2rem);
      border-radius: 12px;
      padding: 0.8rem 0;
    }
    
    .navbar.scrolled.more {
      border-radius: 14px;
      padding: 0.6rem 0;
      margin: 0.6rem 0.8rem 0 0.8rem;
      width: calc(100% - 1.6rem);
    }
    
    .nav-container {
      padding: 0 1.5rem;
    }
    
    .navbar.scrolled .nav-container {
      padding: 0 1.25rem;
    }
    
    .hamburger {
      display: flex;
    }
    
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 0;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      width: 100%;
      height: 100vh;
      text-align: left;
      transition: 0.4s;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      padding: 6rem 2rem 2rem;
      gap: 0;
      z-index: 999;
      border-radius: 0;
    }
    
    .nav-menu.active {
      left: 0;
    }
    
    .nav-item {
      margin: 1rem 0;
    }
    
    .nav-link {
      font-size: 1.1rem;
      padding: 0.75rem 0;
    }
    
    .link-number {
      font-size: 0.8rem;
    }
  }
  
  /* Efek blur untuk konten di belakang navbar */
  .navbar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    backdrop-filter: inherit;
    -webkit-backdrop-filter: inherit;
    z-index: -1;
    border-radius: inherit;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.querySelector('.hamburger');
    const navMenu = document.querySelector('.nav-menu');
    const navbar = document.querySelector('.navbar');
    const navLinks = document.querySelectorAll('.nav-link');
    
    // Navbar scroll effects
    let lastScrollY = window.scrollY;
    let ticking = false;
    
    function updateNavbar() {
      const currentScrollY = window.scrollY;
      
      // Calculate scroll progress (0 to 1)
      const scrollProgress = Math.min(currentScrollY / 150, 1); // Max effect at 150px scroll
      
      // Update navbar classes based on scroll progress
      if (scrollProgress > 0.1) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      if (scrollProgress > 0.6) {
        navbar.classList.add('more');
      } else {
        navbar.classList.remove('more');
      }
      
      lastScrollY = currentScrollY;
      ticking = false;
    }
    
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    }
    
    // Listen to scroll events
    window.addEventListener('scroll', onScroll, { passive: true });
    
    // Initial update
    updateNavbar();
    
    // Hamburger menu functionality
    if (hamburger) {
      hamburger.addEventListener('click', function() {
        hamburger.classList.toggle('active');
        navMenu.classList.toggle('active');
        
        // Disable/enable scroll when menu is open (mobile)
        if (window.innerWidth <= 768) {
          if (navMenu.classList.contains('active')) {
            document.body.style.overflow = 'hidden';
          } else {
            document.body.style.overflow = '';
          }
        }
      });
    }
    
    // Close menu when clicking on a link
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      });
    });
    
    // Close menu when clicking outside (mobile)
    document.addEventListener('click', (e) => {
      if (window.innerWidth <= 768 && 
          !navbar.contains(e.target) && 
          navMenu.classList.contains('active')) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
    
    // Handle resize events
    window.addEventListener('resize', () => {
      if (window.innerWidth > 768) {
        hamburger.classList.remove('active');
        navMenu.classList.remove('active');
        document.body.style.overflow = '';
      }
    });
  });
</script>
