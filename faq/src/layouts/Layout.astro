<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>FAQ Page</title>
    <meta name="description" content="Halaman FAQ dengan Astro" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Poppins:wght@400;500&display=swap" rel="stylesheet">
    <style>
      :root {
        --bg-color: #000;
        --text-color: #fff;
        --border-color: #333;
        --note-color: #1abc9c;
        --footer-green: #16a085;
        --maintenance-bg: #ff6b6b;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html, body {
        height: 100%;
      }
      
      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'Poppins', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: linear-gradient(to bottom right, #0d0d0d, #1a1a1a);
      }
      
      /* Maintenance Banner */
      .maintenance-banner {
        background-color: var(--maintenance-bg);
        color: white;
        padding: 12px 0;
        text-align: center;
        position: relative;
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
      }
      
      .maintenance-banner p {
        margin: 0;
        font-weight: 500;
      }
      
      .close-maintenance {
        background: transparent;
        border: none;
        color: white;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 0 10px;
      }
      
      .site-wrapper {
        flex: 1 0 auto;
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
      }
      
      .site-header {
        text-align: center;
        padding: 20px 0;
        margin-bottom: 30px;
      }
      
      .header-line {
        height: 1px;
        background-color: var(--border-color);
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 30px;
      }
      
      .site-header nav {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 15px;
        flex-wrap: wrap;
      }
      
      .site-header nav a {
        color: var(--text-color);
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 5px;
        transition: all 0.3s;
        border: 1px solid #444;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      
      .site-header nav a:hover {
        background-color: #333;
        transform: translateY(-2px);
      }
      
      .site-header nav a.note-link {
        background: rgba(26, 188, 156, 0.2);
        border-color: var(--note-color);
      }
      
      .site-header nav a.note-link:hover {
        background: rgba(26, 188, 156, 0.3);
      }
      
      main {
        width: 100%;
        margin: 0 auto 40px auto;
        text-align: center;
      }
      
      .main-footer {
        text-align: center;
        padding: 20px;
        color: #bbb;
        font-size: 0.9rem;
        background: var(--bg-color);
        width: 100%;
      }
      
      .footer-line {
        height: 1px;
        background-color: var(--border-color);
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 20px;
      }
      
      /* Footer dengan background merah modern */
      .modern-footer {
        background: linear-gradient(135deg, #ff6b6b 0%, #ff3838 100%);
        padding: 50px 20px;
        width: 100%;
        text-align: center;
        margin-top: 40px;
        color: white;
      }
      
      .modern-footer-content {
        max-width: 1000px;
        margin: 0 auto;
      }
      
      .modern-footer h2 {
        font-size: 2.2rem;
        font-weight: bold;
        margin-bottom: 20px;
        font-family: 'Montserrat', sans-serif;
      }
      
      .modern-footer p {
        font-size: 1.1rem;
        margin-bottom: 30px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
      }
      
      .social-media {
        display: flex;
        justify-content: center;
        gap: 25px;
        margin-bottom: 30px;
        flex-wrap: wrap;
      }
      
      .social-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
        color: white;
        transition: transform 0.3s;
      }
      
      .social-item:hover {
        transform: translateY(-5px);
      }
      
      .social-icon {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        font-size: 1.5rem;
      }
      
      .social-name {
        font-weight: 500;
        font-size: 0.9rem;
      }
      
      .footer-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
        flex-wrap: wrap;
      }
      
      .footer-links a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: opacity 0.3s;
      }
      
      .footer-links a:hover {
        opacity: 0.8;
      }
      
      .copyright {
        margin-top: 30px;
        font-size: 0.9rem;
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
