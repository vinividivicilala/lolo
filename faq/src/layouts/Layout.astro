---
const { title = "Note Farid", description = "", currentPage = 'home' } = Astro.props;
import Navbar from '../components/Navbar.astro';
---

<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- DaisyUI -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    
    <!-- Framer Motion -->
    <script src="https://cdn.jsdelivr.net/npm/framer-motion@11.0.31/dist/framer-motion.min.js"></script>
    
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body {
        background-color: #f8fafc;
        color: #334155;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
      }

      /* Banner yang diperbarui */
      .custom-banner {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 15px;
        padding: 12px 20px;
        margin: 0 auto 20px;
        border-radius: 8px;
        max-width: 700px;
        font-weight: 500;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      }
      
      .custom-banner .left {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1rem;
        font-weight: 600;
      }
      
      .custom-banner button {
        background: none;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: white;
        opacity: 0.8;
        transition: opacity 0.2s;
      }
      
      .custom-banner button:hover {
        opacity: 1;
      }
    </style>
  </head>
  <body>
    <Navbar currentPage={currentPage} />
    
    <!-- Banner -->
    <div class="custom-banner" id="customBanner">
      <div class="left">ðŸ‘€ Note Farid - Tempat Belajar Development Web</div>
      <button onclick="document.getElementById('customBanner').style.display='none'">âœ–</button>
    </div>

    <main class="min-h-screen">
      <slot />
    </main>
    
    <script>
      // Inisialisasi Framer Motion jika tersedia
      document.addEventListener('DOMContentLoaded', function() {
        if (window.framerMotion) {
          // Animasi untuk banner
          const banner = document.getElementById('customBanner');
          if (banner) {
            framerMotion.animate(banner, {
              opacity: [0, 1],
              y: [-20, 0],
              transition: { duration: 0.5 }
            });
          }
        }
      });
    </script>
  </body>
</html>
