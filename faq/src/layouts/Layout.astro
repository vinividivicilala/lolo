---
const { title = "Note Farid", description = "", currentPage = 'home' } = Astro.props;
import Navbar from '../components/Navbar.astro';
---

<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- DaisyUI Styles -->
    <style>
      /* DaisyUI Core Styles - Simplified Version */
      :root {
        --p: 259 94% 51%;
        --pf: 259 94% 41%;
        --pc: 0 0% 100%;
        --s: 314 100% 47%;
        --sf: 314 100% 37%;
        --sc: 0 0% 100%;
        --a: 174 60% 51%;
        --af: 174 60% 41%;
        --ac: 0 0% 100%;
        --n: 219 14% 28%;
        --nf: 219 14% 18%;
        --nc: 0 0% 100%;
        --b1: 0 0% 100%;
        --b2: 0 0% 95%;
        --b3: 0 0% 90%;
        --bc: 0 0% 20%;
        --in: 198 93% 60%;
        --su: 158 64% 52%;
        --wa: 43 96% 56%;
        --er: 0 91% 71%;
        --rounded-box: 1rem;
        --rounded-btn: 0.5rem;
        --rounded-badge: 1.9rem;
        --animation-btn: 0.25s;
        --animation-input: 0.2s;
        --btn-text-case: uppercase;
        --btn-focus-scale: 0.95;
        --border-btn: 1px;
        --tab-border: 1px;
        --tab-radius: 0.5rem;
      }

      .btn {
        display: inline-flex;
        height: 3rem;
        min-height: 3rem;
        flex-shrink: 0;
        cursor: pointer;
        user-select: none;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        border-radius: var(--rounded-btn);
        border-color: transparent;
        border-width: var(--border-btn);
        padding-left: 1rem;
        padding-right: 1rem;
        text-align: center;
        font-size: 0.875rem;
        transition: all 0.15s ease;
        line-height: 1.25rem;
        font-weight: 600;
        text-transform: var(--btn-text-case);
      }

      .btn-circle {
        height: 3rem;
        width: 3rem;
        border-radius: 50%;
        padding: 0;
      }

      .btn-ghost {
        border-color: transparent;
        background-color: transparent;
        color: currentColor;
      }

      .btn-ghost:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }

      .btn-xs {
        height: 1.5rem;
        min-height: 1.5rem;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        font-size: 0.75rem;
      }

      .btn-xs.btn-circle {
        height: 1.5rem;
        width: 1.5rem;
      }

      .bg-base-100 {
        background-color: hsl(0, 0%, 100%);
      }

      .bg-base-200 {
        background-color: hsl(0, 0%, 95%);
      }

      .bg-base-300 {
        background-color: hsl(0, 0%, 90%);
      }

      .bg-primary {
        background-color: hsl(var(--p));
      }

      .text-primary-content {
        color: hsl(var(--pc));
      }

      .text-base-content {
        color: hsl(var(--bc));
      }

      .rounded-box {
        border-radius: var(--rounded-box);
      }

      .shadow-md {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }

      .border {
        border-width: 1px;
        border-style: solid;
      }

      .border-base-300 {
        border-color: hsl(var(--b3));
      }

      .p-4 {
        padding: 1rem;
      }

      .gap-4 {
        gap: 1rem;
      }

      .flex {
        display: flex;
      }

      .items-center {
        align-items: center;
      }

      .items-start {
        align-items: flex-start;
      }

      .justify-center {
        justify-content: center;
      }

      .flex-1 {
        flex: 1 1 0%;
      }

      .w-8 {
        width: 2rem;
      }

      .h-8 {
        height: 2rem;
      }




      .text-2xl {
        font-size: 1.5rem;
        line-height: 2rem;
      }

      .text-lg {
        font-size: 1.125rem;
        line-height: 1.75rem;
      }

      .font-semibold {
        font-weight: 600;
      }

      .mb-0 {
        margin-bottom: 0;
      }

      .mt-3 {
        margin-top: 0.75rem;
      }

      .text-base-content\/80 {
        color: rgba(0, 0, 0, 0.8);
      }

      @media (max-width: 768px) {
        .p-4 {
          padding: 0.75rem;
        }
      }
    </style>
    
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body {
        background-color: #000;
        color: #334155;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
      }

    
      
      .min-h-screen {
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <Navbar currentPage={currentPage} />
    
  
    <main class="min-h-screen">
      <slot />
    </main>
    
    <!-- Framer Motion Local Script -->
    <script>
      // Simplified Framer Motion implementation
      window.framerMotion = {
        animate: (element, options) => {
          if (options.opacity) {
            if (Array.isArray(options.opacity)) {
              element.style.opacity = options.opacity[0];
              setTimeout(() => {
                element.style.opacity = options.opacity[1];
                element.style.transition = `opacity ${options.transition?.duration || 0.3}s ease`;
              }, 10);
            } else {
              element.style.opacity = options.opacity;
              element.style.transition = `opacity ${options.transition?.duration || 0.3}s ease`;
            }
          }
          
          if (options.y) {
            if (Array.isArray(options.y)) {
              element.style.transform = `translateY(${options.y[0]}px)`;
              setTimeout(() => {
                element.style.transform = `translateY(${options.y[1]}px)`;
                element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
              }, 10);
            } else {
              element.style.transform = `translateY(${options.y}px)`;
              element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
            }
          }
          
          if (options.scale) {
            if (Array.isArray(options.scale)) {
              element.style.transform = `scale(${options.scale[0]})`;
              setTimeout(() => {
                element.style.transform = `scale(${options.scale[1]})`;
                element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
              }, 10);
            } else {
              element.style.transform = `scale(${options.scale})`;
              element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
            }
          }
        }
      };

      
    </script>
  </body>
</html>
