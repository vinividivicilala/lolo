---
const { title = "Note Farid", description = "", currentPage = 'home' } = Astro.props;
---

<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- DaisyUI Styles -->
    <style>
      /* DaisyUI Core Styles - Simplified Version */
      :root {
        --p: 259 94% 51%;
        --pf: 259 94% 41%;
        --pc: 0 0% 100%;
        --s: 314 100% 47%;
        --sf: 314 100% 37%;
        --sc: 0 0% 100%;
        --a: 174 60% 51%;
        --af: 174 60% 41%;
        --ac: 0 0% 100%;
        --n: 219 14% 28%;
        --nf: 219 14% 18%;
        --nc: 0 0% 100%;
        --b1: 0 0% 100%;
        --b2: 0 0% 95%;
        --b3: 0 0% 90%;
        --bc: 0 0% 20%;
        --in: 198 93% 60%;
        --su: 158 64% 52%;
        --wa: 43 96% 56%;
        --er: 0 91% 71%;
        --rounded-box: 1rem;
        --rounded-btn: 0.5rem;
        --rounded-badge: 1.9rem;
        --animation-btn: 0.25s;
        --animation-input: 0.2s;
        --btn-text-case: uppercase;
        --btn-focus-scale: 0.95;
        --border-btn: 1px;
        --tab-border: 1px;
        --tab-radius: 0.5rem;
      }

      .btn {
        display: inline-flex;
        height: 3rem;
        min-height: 3rem;
        flex-shrink: 0;
        cursor: pointer;
        user-select: none;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        border-radius: var(--rounded-btn);
        border-color: transparent;
        border-width: var(--border-btn);
        padding-left: 1rem;
        padding-right: 1rem;
        text-align: center;
        font-size: 0.875rem;
        transition: all 0.15s ease;
        line-height: 1.25rem;
        font-weight: 600;
        text-transform: var(--btn-text-case);
      }

      .btn-circle {
        height: 3rem;
        width: 3rem;
        border-radius: 50%;
        padding: 0;
      }

      .btn-ghost {
        border-color: transparent;
        background-color: transparent;
        color: currentColor;
      }

      .btn-ghost:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }

      .btn-xs {
        height: 1.5rem;
        min-height: 1.5rem;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
        font-size: 0.75rem;
      }

      .btn-xs.btn-circle {
        height: 1.5rem;
        width: 1.5rem;
      }

      .bg-base-100 {
        background-color: hsl(0, 0%, 100%);
      }

      .bg-base-200 {
        background-color: hsl(0, 0%, 95%);
      }

      .bg-base-300 {
        background-color: hsl(0, 0%, 90%);
      }

      .bg-primary {
        background-color: hsl(var(--p));
      }

      .text-primary-content {
        color: hsl(var(--pc));
      }

      .text-base-content {
        color: hsl(var(--bc));
      }

      .rounded-box {
        border-radius: var(--rounded-box);
      }

      .shadow-md {
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }

      .border {
        border-width: 1px;
        border-style: solid;
      }

      .border-base-300 {
        border-color: hsl(var(--b3));
      }

      .p-4 {
        padding: 1rem;
      }

      .gap-4 {
        gap: 1rem;
      }

      .flex {
        display: flex;
      }

      .items-center {
        align-items: center;
      }

      .items-start {
        align-items: flex-start;
      }

      .justify-center {
        justify-content: center;
      }

      .flex-1 {
        flex: 1 1 0%;
      }

      .w-8 {
        width: 2rem;
      }

      .h-8 {
        height: 2rem;
      }

      .text-2xl {
        font-size: 1.5rem;
        line-height: 2rem;
      }

      .text-lg {
        font-size: 1.125rem;
        line-height: 1.75rem;
      }

      .font-semibold {
        font-weight: 600;
      }

      .mb-0 {
        margin-bottom: 0;
      }

      .mt-3 {
        margin-top: 0.75rem;
      }

      .text-base-content\/80 {
        color: rgba(0, 0, 0, 0.8);
      }

      @media (max-width: 768px) {
        .p-4 {
          padding: 0.75rem;
        }
      }
    </style>
    
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body {
        background-color: #ffffff;
        color: #334155;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
        line-height: 1.6;
      }

      .min-h-screen {
        min-height: 100vh;
      }

      /* Content styles untuk demo efek blur */
      .content-section {
        padding: 100px 20px;
        text-align: center;
      }
      
      .content-section h1 {
        font-size: 3rem;
        margin-bottom: 2rem;
        color: #1f2937;
      }
      
      .content-section p {
        font-size: 1.2rem;
        color: #6b7280;
        max-width: 600px;
        margin: 0 auto;
      }
      
      .demo-image {
        width: 300px;
        height: 200px;
        background: linear-gradient(45deg, #667eea, #764ba2);
        border-radius: 12px;
        margin: 2rem auto;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
      }
    </style>

    <!-- Navbar Styles -->
    <style>
      .navbar {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(0px);
        -webkit-backdrop-filter: blur(0px);
        padding: 1.5rem 0;
        position: sticky;
        top: 0;
        z-index: 1000;
        border-radius: 0px;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        transform-origin: top;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      }
      
      .navbar.scrolled {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        padding: 0.8rem 0;
        border-radius: 20px;
        margin: 10px 20px 0 20px;
        width: calc(100% - 40px);
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.8);
        transform: scale(0.95);
        border: 1px solid rgba(0, 0, 0, 0.08);
      }
      
      .navbar.scrolled.more {
        padding: 0.6rem 0;
        border-radius: 25px;
        transform: scale(0.92);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        background: rgba(255, 255, 255, 0.8);
      }
      
      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: all 0.4s ease;
      }
      
      .navbar.scrolled .nav-container {
        padding: 0 25px;
      }
      
      .nav-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.4s ease;
      }
      
      .logo-image {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        object-fit: cover;
        transition: all 0.4s ease;
        border: 2px solid rgba(0, 0, 0, 0.1);
      }
      
      .navbar.scrolled .logo-image {
        width: 35px;
        height: 35px;
        border-radius: 8px;
      }
      
      .navbar.scrolled.more .logo-image {
        width: 30px;
        height: 30px;
        border-radius: 6px;
      }
      
      .nav-logo a {
        color: #1f2937;
        font-size: 1.8rem;
        font-weight: 700;
        text-decoration: none;
        font-family: 'Montserrat', sans-serif;
        transition: all 0.4s ease;
      }
      
      .navbar.scrolled .nav-logo a {
        font-size: 1.5rem;
      }
      
      .navbar.scrolled.more .nav-logo a {
        font-size: 1.4rem;
      }
      
      .nav-menu {
        display: flex;
        list-style: none;
        gap: 2rem;
        transition: all 0.4s ease;
      }
      
      .navbar.scrolled .nav-menu {
        gap: 1.5rem;
      }
      
      .nav-link {
        color: #4b5563;
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        font-size: 1rem;
      }
      
      .navbar.scrolled .nav-link {
        padding: 0.4rem 0.8rem;
        font-size: 0.9rem;
        border-radius: 8px;
      }
      
      .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #3b82f6, #8b5cf6);
        transition: width 0.3s ease;
      }
      
      .nav-link:hover::after,
      .nav-link.active::after {
        width: 100%;
      }
      
      .nav-link:hover, .nav-link.active {
        background: rgba(59, 130, 246, 0.1);
        color: #3b82f6;
        transform: translateY(-1px);
      }
      
      .hamburger {
        display: none;
        flex-direction: column;
        cursor: pointer;
        transition: all 0.4s ease;
        padding: 0.5rem;
        border-radius: 8px;
      }
      
      .hamburger:hover {
        background: rgba(0, 0, 0, 0.05);
      }
      
      .navbar.scrolled .hamburger {
        transform: scale(0.9);
      }
      
      .bar {
        width: 25px;
        height: 3px;
        background: #4b5563;
        margin: 3px 0;
        transition: 0.3s;
        border-radius: 2px;
      }
      
      .hamburger.active .bar:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
        background: #3b82f6;
      }
      
      .hamburger.active .bar:nth-child(2) {
        opacity: 0;
      }
      
      .hamburger.active .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
        background: #3b82f6;
      }
      
      @media (max-width: 768px) {
        .navbar {
          padding: 1rem 0;
          margin: 0;
          width: 100%;
        }
        
        .navbar.scrolled {
          margin: 8px 15px 0 15px;
          width: calc(100% - 30px);
          border-radius: 15px;
          padding: 0.7rem 0;
        }
        
        .navbar.scrolled.more {
          border-radius: 18px;
          padding: 0.5rem 0;
        }
        
        .hamburger {
          display: flex;
        }
        
        .nav-menu {
          position: fixed;
          left: -100%;
          top: 0;
          flex-direction: column;
          background: rgba(255, 255, 255, 0.95);
          backdrop-filter: blur(30px);
          -webkit-backdrop-filter: blur(30px);
          width: 100%;
          height: 100vh;
          text-align: center;
          transition: 0.4s;
          box-shadow: 0 10px 27px rgba(0,0,0,0.1);
          padding: 2rem 0;
          gap: 0;
          z-index: 999;
          border-radius: 0;
        }
        
        .nav-menu.active {
          left: 0;
        }
        
        .nav-item {
          margin: 1.5rem 0;
        }
        
        .navbar.scrolled .nav-container {
          padding: 0 20px;
        }
        
        .nav-logo a {
          font-size: 1.5rem;
        }
      }
      
      /* Efek blur untuk konten di belakang navbar */
      .navbar::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: inherit;
        backdrop-filter: inherit;
        -webkit-backdrop-filter: inherit;
        z-index: -1;
        border-radius: inherit;
      }
    </style>
  </head>
  <body>
    <!-- Navbar Component -->
    <nav class="navbar">
      <div class="nav-container">
        <div class="nav-logo">
          <img src="/images/5.jpg" alt="Note Farid Logo" class="logo-image" />
          <a href="/">Note Farid</a>
        </div>
        <ul class="nav-menu">
          <li class="nav-item">
            <a href="/" class={`nav-link ${currentPage === 'home' ? 'active' : ''}`}>Home</a>
          </li>
          <li class="nav-item">
            <a href="/faq" class={`nav-link ${currentPage === 'faq' ? 'active' : ''}`}>FAQ</a>
          </li>
          <li class="nav-item">
            <a href="/blog" class={`nav-link ${currentPage === 'blog' ? 'active' : ''}`}>Blog</a>
          </li>
        </ul>
        <div class="hamburger">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </div>
    </nav>

    <main class="min-h-screen">
      <!-- Demo content untuk melihat efek blur -->
      <section class="content-section">
        <h1>Welcome to Note Farid</h1>
        <p>Scroll ke bawah untuk melihat efek navbar yang mengecil dengan blur background</p>
        <div class="demo-image">Demo Image</div>
        <p>Efek blur akan terlihat jelas ketika navbar berada di atas konten yang berwarna</p>
      </section>
      
      <section class="content-section" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
        <h1>Beautiful Gradient Section</h1>
        <p>Navbar akan terlihat transparan dengan efek blur di atas background ini</p>
        <div class="demo-image" style="background: rgba(255,255,255,0.2);">Content Image</div>
      </section>
      
      <section class="content-section">
        <h1>Another Content Section</h1>
        <p>Terus scroll untuk melihat efek navbar yang berubah</p>
        <div style="height: 1000px;"></div>
      </section>

      <slot />
    </main>
    
    <!-- Navbar Script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const hamburger = document.querySelector('.hamburger');
        const navMenu = document.querySelector('.nav-menu');
        const navbar = document.querySelector('.navbar');
        const navLinks = document.querySelectorAll('.nav-link');
        
        let lastScrollY = window.scrollY;
        let scrollProgress = 0;
        let isAtTop = true;
        
        function updateNavbar() {
          const currentScrollY = window.scrollY;
          
          // Reset ke normal jika di paling atas
          if (currentScrollY <= 5) {
            navbar.classList.remove('scrolled', 'more');
            isAtTop = true;
            return;
          }
          
          isAtTop = false;
          
          // Calculate scroll progress (0 to 1)
          scrollProgress = Math.min(currentScrollY / 200, 1); // Max effect at 200px scroll
          
          // Update navbar classes based on scroll progress
          if (scrollProgress > 0.1) {
            navbar.classList.add('scrolled');
          } else {
            navbar.classList.remove('scrolled');
          }
          
          if (scrollProgress > 0.6) {
            navbar.classList.add('more');
          } else {
            navbar.classList.remove('more');
          }
          
          lastScrollY = currentScrollY;
        }
        
        // Throttle scroll events
        let scrollTimeout;
        window.addEventListener('scroll', () => {
          if (!scrollTimeout) {
            scrollTimeout = setTimeout(() => {
              updateNavbar();
              scrollTimeout = null;
            }, 10);
          }
        });
        
        // Initial update
        updateNavbar();
        
        // Hamburger menu functionality
        if (hamburger) {
          hamburger.addEventListener('click', function() {
            hamburger.classList.toggle('active');
            navMenu.classList.toggle('active');
            
            // Disable/enable scroll when menu is open (mobile)
            if (window.innerWidth <= 768) {
              if (navMenu.classList.contains('active')) {
                document.body.style.overflow = 'hidden';
              } else {
                document.body.style.overflow = '';
              }
            }
          });
        }
        
        // Close menu when clicking on a link
        navLinks.forEach(link => {
          link.addEventListener('click', () => {
            hamburger.classList.remove('active');
            navMenu.classList.remove('active');
            document.body.style.overflow = '';
          });
        });
        
        // Close menu when clicking outside (mobile)
        document.addEventListener('click', (e) => {
          if (window.innerWidth <= 768 && 
              !navbar.contains(e.target) && 
              navMenu.classList.contains('active')) {
            hamburger.classList.remove('active');
            navMenu.classList.remove('active');
            document.body.style.overflow = '';
          }
        });
        
        // Handle resize events
        window.addEventListener('resize', () => {
          if (window.innerWidth > 768) {
            hamburger.classList.remove('active');
            navMenu.classList.remove('active');
            document.body.style.overflow = '';
          }
        });
      });
    </script>

    <!-- Framer Motion Local Script -->
    <script>
      window.framerMotion = {
        animate: (element, options) => {
          if (options.opacity) {
            if (Array.isArray(options.opacity)) {
              element.style.opacity = options.opacity[0];
              setTimeout(() => {
                element.style.opacity = options.opacity[1];
                element.style.transition = `opacity ${options.transition?.duration || 0.3}s ease`;
              }, 10);
            } else {
              element.style.opacity = options.opacity;
              element.style.transition = `opacity ${options.transition?.duration || 0.3}s ease`;
            }
          }
          
          if (options.y) {
            if (Array.isArray(options.y)) {
              element.style.transform = `translateY(${options.y[0]}px)`;
              setTimeout(() => {
                element.style.transform = `translateY(${options.y[1]}px)`;
                element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
              }, 10);
            } else {
              element.style.transform = `translateY(${options.y}px)`;
              element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
            }
          }
          
          if (options.scale) {
            if (Array.isArray(options.scale)) {
              element.style.transform = `scale(${options.scale[0]})`;
              setTimeout(() => {
                element.style.transform = `scale(${options.scale[1]})`;
                element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
              }, 10);
            } else {
              element.style.transform = `scale(${options.scale})`;
              element.style.transition = `transform ${options.transition?.duration || 0.3}s ease`;
            }
          }
        }
      };
    </script>
  </body>
</html>
