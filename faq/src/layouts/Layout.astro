    </div>
    
    <script>
      // Menampilkan tanggal dan waktu terbaru di footer
      document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const options = { 
          weekday: 'long', 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        };
        const dateTimeStr = now.toLocaleDateString('id-ID', options);
        if (document.getElementById('footerDate')) {
          document.getElementById('footerDate').textContent = dateTimeStr;
        }

        // Fungsi untuk menutup maintenance banner
        const closeButton = document.getElementById('closeMaintenance');
        const maintenanceBanner = document.getElementById('maintenanceBanner');
        
        if (closeButton && maintenanceBanner) {
          closeButton.addEventListener('click', function() {
            maintenanceBanner.style.display = 'none';
          });
        }
      });
    </script>
  </body>
</html>
