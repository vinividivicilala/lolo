      * { margin: 0; padding: 0; box-sizing: border-box; }
      body {
        background-color: #fff;
        color: #333;
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
      }
      .custom-banner {
        background: #f8f9fa;
        color: #333;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 15px;
        padding: 15px 25px;
        margin: 0 auto 20px;
        border-radius: 12px;
        max-width: 700px;
        font-weight: 500;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        border-left: 4px solid #A0D2EB;
      }
      .custom-banner .left {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.1rem;
      }
      .custom-banner button {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #333;
      }
    </style>
  </head>
