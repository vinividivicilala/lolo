// Layout.astro
---

<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>FAQ Page</title>
    <meta name="description" content="Halaman FAQ dengan Astro" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Poppins:wght@400;500&display=swap" rel="stylesheet">
    <style>
      :root {
        --bg-color: #000;
        --text-color: #fff;
        --border-color: #333;
        --note-color: #1abc9c;
        --footer-red: #e74c3c;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html, body {
        height: 100%;
      }
      
      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'Poppins', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-image: linear-gradient(to bottom right, #0d0d0d, #1a1a1a);
      }
      
      .site-wrapper {
        flex: 1 0 auto;
        padding: 20px;
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
      }
      
      .site-header {
        text-align: center;
        padding: 20px 0;
        margin-bottom: 30px;
      }
      
      .header-line {
        height: 1px;
        background-color: var(--border-color);
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 30px;
      }
      
      .site-header nav {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 15px;
        flex-wrap: wrap;
      }
      
      .site-header nav a {
        color: var(--text-color);
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 5px;
        transition: all 0.3s;
        border: 1px solid #444;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      
      .site-header nav a:hover {
        background-color: #333;
        transform: translateY(-2px);
      }
      
      .site-header nav a.note-link {
        background: rgba(26, 188, 156, 0.2);
        border-color: var(--note-color);
      }
      
      .site-header nav a.note-link:hover {
        background: rgba(26, 188, 156, 0.3);
      }
      
      main {
        width: 100%;
        margin: 0 auto 40px auto;
        text-align: center;
      }
      
      .main-footer {
        text-align: center;
        padding: 20px;
        color: #bbb;
        font-size: 0.9rem;
        background: var(--bg-color);
        width: 100%;
      }
      
      .footer-line {
        height: 1px;
        background-color: var(--border-color);
        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        margin-bottom: 20px;
      }
      
      /* Footer dengan background merah full width */
      .red-footer {
        background-color: var(--footer-red);
        padding: 80px 20px;
        width: 100%;
        margin-top: auto;
      }
    </style>
  </head>
  <body>
    <div class="site-wrapper">
      <header class="site-header">
        <h1>Astro FAQ</h1>
        <nav>
          <a href="/">üè† Home</a>
          <a href="/faq">‚ùì FAQ</a>
          <a href="#note" class="note-link">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 11V16M12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            Note
          </a>
        </nav>
      </header>

      <div class="header-line"></div>

      <main>
        <slot />
      </main>

      <div class="footer-line"></div>

      <footer class="main-footer">
        <!-- Teks dihapus sesuai permintaan -->
      </footer>
    </div>

    <!-- Footer dengan background merah full width -->
    <div class="red-footer">
      <!-- Hanya background merah, tanpa teks -->
    </div>
    
    <script>
      // Menampilkan tanggal dan waktu terbaru di footer
      document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const options = { 
          weekday: 'long', 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        };
        const dateTimeStr = now.toLocaleDateString('id-ID', options);
        if (document.getElementById('footerDate')) {
          document.getElementById('footerDate').textContent = dateTimeStr;
        }
      });
    </script>
  </body>
</html>
