<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>FAQ Page</title>
    <meta name="description" content="Halaman FAQ dengan Astro" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&family=Poppins:wght@400;500&display=swap" rel="stylesheet">
    <style>
      :root {
        --bg-color: #000;
        --text-color: #fff;
        --border-color: #333;
        --note-color: #1abc9c;
      }
      
      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 20px;
        min-height: 100vh;
        background-image: linear-gradient(to bottom right, #0d0d0d, #1a1a1a);
        display: flex;
        flex-direction: column;
      }
      
      .site-header {
        text-align: center;
        padding: 20px 0;
        margin-bottom: 30px;
        border-bottom: 1px solid var(--border-color);
      }
      
      .site-header nav {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 15px;
        flex-wrap: wrap;
      }
      
      .site-header nav a {
        color: var(--text-color);
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 5px;
        transition: all 0.3s;
        border: 1px solid #444;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      
      .site-header nav a:hover {
        background-color: #333;
        transform: translateY(-2px);
      }
      
      .site-header nav a.note-link {
        background: rgba(26, 188, 156, 0.2);
        border-color: var(--note-color);
      }
      
      .site-header nav a.note-link:hover {
        background: rgba(26, 188, 156, 0.3);
      }
      
      main {
        max-width: 800px;
        margin: 0 auto 40px auto;
        flex: 1;
      }
      
      footer {
        text-align: center;
        padding: 20px;
        margin-top: 40px;
        border-top: 1px solid var(--border-color);
        color: #bbb;
        font-size: 0.9rem;
      }
      
      /* Footer dengan background hijau */
      .faq-footer {
        background-color: #16a085;
        padding: 40px 20px;
        margin-top: 60px;
        border-radius: 10px 10px 0 0;
      }
      
      .faq-footer-content {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <header class="site-header">
      <h1>Astro FAQ</h1>
      <nav>
        <a href="/">üè† Home</a>
        <a href="/faq">‚ùì FAQ</a>
        <a href="#note" class="note-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 11V16M12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          Note
        </a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <!-- Footer dengan background hijau -->
    <div class="faq-footer">
      <!-- Hanya background hijau, tanpa teks -->
    </div>

    <footer>
      <p>¬© 2025 | Dibuat dengan Astro üöÄ | Last update: <span id="footerDate"></span></p>
    </footer>
    
    <script>
      // Menampilkan tanggal dan waktu terbaru di footer
      document.addEventListener('DOMContentLoaded', function() {
        const now = new Date();
        const options = { 
          weekday: 'long', 
          year: 'numeric', 
          month: 'long', 
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        };
        const dateTimeStr = now.toLocaleDateString('id-ID', options);
        document.getElementById('footerDate').textContent = dateTimeStr;
      });
    </script>
  </body>
</html>
