      block.addEventListener('mouseenter', () => {
        if (block.classList.contains('active')) {
          const state = Flip.getState(block);
          block.style.zIndex = 20;
          
          Flip.from(state, {
            duration: 0.4,
            ease: 'power2.out',
            scale: true,
            absolute: true
          });
        }
      });
    });

    // Function to update active text block
    function updateActiveTextBlock(progress) {
      const activeIndex = Math.floor(progress * (textBlocks.length - 1));
      
      textBlocks.forEach((block, index) => {
        block.classList.toggle('active', index === activeIndex);
        
        // Update current step number
