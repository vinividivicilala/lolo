---
// blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <section class="linebox">
        <h1 class="big-title">Halaman Blog</h1>
        <p class="desc">
          Konten blog akan segera hadir. Semua artikel akan tampil di sini
          dengan desain bersih dan modern.
        </p>
      </section>
    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background: #f2f3f5;
    color: #222;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .linebox {
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 16px;
    padding: 50px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
  }

  .big-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
    text-align: left;
    color: #111;
  }

  .desc {
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.8;
    text-align: right;
    color: #333;
  }

  @media (max-width: 768px) {
    .big-title {
      font-size: 2rem;
    }
    .desc {
      font-size: 1rem;
      text-align: center;
    }
  }
</style>
