// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header Section -->
      <section class="header-section">
        <div class="header-content">
          <h1 class="big-title">Blog</h1>
          <a href="/blog/all" class="all-blog-link">
            All Blog 
            <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Blog Content Section -->
      <section class="linebox">
        <h2 class="blog-title">Konten Blog Akan Segera Hadir</h2>
        <p class="desc">
          Semua artikel akan tampil di sini dengan desain bersih dan modern. 
          Stay tuned untuk update terbaru!
        </p>
        <button class="donasi-btn" id="openDonasi">ðŸ’™ Dukung Kami</button>
      </section>
    </main>
  </div>

  <!-- Modal Donasi -->
  <div id="donasiModal" class="modal">
    <div class="modal-content">
      <span class="close" id="closeDonasi">&times;</span>
      <h2>Project Note Farid</h2>
      <p class="subtitle">Kebebasan pers adalah syarat demokrasi,<br/>bukan hal yang bisa dinegosiasikan. Dukung kami.</p>

      <label for="tipe">Kontribusi:</label>
      <select id="tipe" class="select-box">
        <option>Kontribusi bulanan</option>
        <option>Kontribusi sekali</option>
      </select>

      <div class="nominal">
        <button class="nominal-btn active">Rp30.000</button>
        <button class="nominal-btn">Rp100.000</button>
        <button class="nominal-btn">Rp250.000</button>
      </div>

      <ul class="benefit">
        <li>âœ” Undangan ke rapat redaksi, akses laporan transparansi, dan nawala khusus anggota</li>
        <li>âœ” Patungan membiayai liputan mendalam & subsidi silang anggota lain</li>
      </ul>

      <button class="submit-btn">Beri kontribusi Rp100.000/bulan</button>
    </div>
  </div>
</Layout>

<style>
  /* Donasi Button */
  .donasi-btn {
    margin-top: 20px;
    background: #0077ff;
    color: #fff;
    padding: 12px 20px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.3s;
  }
  .donasi-btn:hover { background: #005fcc; }

  /* Modal Base */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0; top: 0;
    width: 100%; height: 100%;
    background: rgba(0,0,0,0.6);
    justify-content: center;
    align-items: center;
  }
  .modal-content {
    background: #fff;
    color: #000;
    padding: 30px;
    border-radius: 14px;
    max-width: 400px;
    width: 90%;
    box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    position: relative;
    animation: fadeIn 0.3s ease-in-out;
  }
  .modal-content h2 { margin: 0 0 10px; font-weight: 700; }
  .modal-content .subtitle { font-size: 0.95rem; color: #444; margin-bottom: 20px; }
  .close {
    position: absolute;
    top: 12px; right: 16px;
    font-size: 24px;
    cursor: pointer;
    color: #666;
  }
  .select-box {
    width: 100%;
    padding: 10px;
    border-radius: 8px;
    margin-bottom: 15px;
  }
  .nominal {
    display: flex;
    gap: 10px;
    margin-bottom: 15px;
  }
  .nominal-btn {
    flex: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 8px;
    background: #f4f4f4;
    cursor: pointer;
    font-weight: 600;
  }
  .nominal-btn.active { background: #0077ff; color: #fff; border-color: #005fcc; }
  .benefit { margin: 15px 0; padding-left: 20px; font-size: 0.9rem; color: #333; }
  .submit-btn {
    width: 100%;
    background: #0077ff;
    color: #fff;
    padding: 12px;
    border: none;
    border-radius: 10px;
    font-weight: 600;
    cursor: pointer;
  }
  .submit-btn:hover { background: #005fcc; }
  @keyframes fadeIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("donasiModal");
    const openBtn = document.getElementById("openDonasi");
    const closeBtn = document.getElementById("closeDonasi");

    openBtn.onclick = () => modal.style.display = "flex";
    closeBtn.onclick = () => modal.style.display = "none";
    window.onclick = (e) => { if (e.target == modal) modal.style.display = "none"; };

    // Pilih nominal aktif
    document.querySelectorAll(".nominal-btn").forEach(btn => {
      btn.addEventListener("click", () => {
        document.querySelectorAll(".nominal-btn").forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
        document.querySelector(".submit-btn").innerText = "Beri kontribusi " + btn.innerText + "/bulan";
      });
    });
  });
</script>
