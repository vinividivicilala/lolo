---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';

const blogPosts = [
  {
    id: 1,
    title: "Memulai dengan Astro",
    date: "15 Maret 2023",
    excerpt: "Pelajari cara memulai pembuatan website dengan Astro, framework modern yang cepat dan efisien.",
    image: "/images/blog1.jpg",
    category: "Tutorial"
  },
  // ... data blog posts lainnya sama seperti di atas
];
---

<Layout title="Blog | Note Farid" description="Artikel dan tutorial tentang development web dan Astro." currentPage="blog">
  <div class="container">
    <main>
      <div class="header-section">
        <h1 class="main-title">BLOG<br/>NOTE FARID</h1>
        <div class="description-box">
          <p class="right-align">Selamat datang di blog saya! Di sini saya berbagi tutorial, tips, dan pemikiran tentang development web, Astro, dan teknologi terkini. Setiap artikel ditulis dengan dedikasi untuk membantu Anda mengembangkan skill dan pengetahuan dalam dunia web development.</p>
        </div>
      </div>

      <div class="blog-grid">
        {blogPosts.map(post => (
          <article class="linebox-card">
            <div class="card-border">
              <div class="blog-image">
                <img src={post.image} alt={post.title} />
                <span class="blog-category">{post.category}</span>
              </div>
              <div class="blog-content">
                <h2 class="blog-title">{post.title}</h2>
                <p class="blog-date">{post.date}</p>
                <p class="blog-excerpt">{post.excerpt}</p>
                <a href={`/blog/${post.id}`} class="blog-read-more">â†’ Baca selengkapnya</a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </main>
  </div>
</Layout>

<style>
  body {
    background: #fefefe;
    color: #333;
    min-height: 100vh;
    margin: 0;
    font-family: 'Arial', sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .header-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
    margin-bottom: 60px;
    border-bottom: 3px solid #333;
    padding-bottom: 40px;
  }

  .main-title {
    font-size: 4.5rem;
    font-weight: 900;
    line-height: 1.1;
    margin: 0;
    color: #222;
    text-transform: uppercase;
    letter-spacing: -1px;
  }

  .description-box {
    border: 2px solid #333;
    padding: 30px;
    background: #fff;
    position: relative;
  }

  .right-align {
    text-align: right;
    font-size: 1.1rem;
    line-height: 1.7;
    color: #555;
    margin: 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 40px;
  }

  .linebox-card {
    position: relative;
  }

  .card-border {
    border: 2px solid #333;
    background: #fff;
    transition: all 0.3s ease;
    position: relative;
  }

  .linebox-card:hover .card-border {
    transform: translate(-8px, -8px);
    box-shadow: 8px 8px 0 #333;
  }

  .blog-image {
    position: relative;
    height: 220px;
    overflow: hidden;
    border-bottom: 2px solid #333;
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .linebox-card:hover .blog-image img {
    transform: scale(1.05);
  }

  .blog-category {
    position: absolute;
    top: 15px;
    right: 15px;
    background: #333;
    color: white;
    padding: 8px 15px;
    font-weight: bold;
    font-size: 0.8rem;
    letter-spacing: 1px;
  }

  .blog-content {
    padding: 25px;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0 0 10px 0;
    color: #222;
    line-height: 1.3;
  }

  .blog-date {
    color: #666;
    font-size: 0.9rem;
    margin: 0 0 15px 0;
    font-weight: 500;
  }

  .blog-excerpt {
    color: #555;
    line-height: 1.6;
    margin: 0 0 20px 0;
  }

  .blog-read-more {
    color: #333;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
  }

  .blog-read-more:hover {
    color: #666;
  }

  @media (max-width: 968px) {
    .header-section {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .main-title {
      font-size: 3rem;
      text-align: center;
    }

    .right-align {
      text-align: center;
    }
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .main-title {
      font-size: 2.5rem;
    }
  }
</style>
