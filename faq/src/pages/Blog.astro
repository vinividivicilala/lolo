---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';

---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>

      <!-- HEADER SECTION -->
      <section class="header-section">
        <div class="header-content">
          <div class="title-container">
            <h1 class="big-title">
              <span class="animated-title">
                <span class="title-text" id="mainTitle">Blog</span>
              </span>
            </h1>
            <div class="subtitle-animation">
              <span class="subtitle-text">Tempat Berbagi Ilmu & Inspirasi</span>
              <div class="floating-dots">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
              </div>
            </div>
          </div>
          <a href="/blog/all" class="all-blog-link">
            All Blog 
            <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>

<!-- Gambar dengan border radius -->
<div class="image-container">
  <img src="/images/5.jpg" alt="Tentang Diri" class="about-me-image" />
</div>

<!-- Subjudul Tentang Diri -->
<div class="about-me-section">
  <div class="about-me-header">
    <h3 class="about-me-title">Tentang Diri</h3>
    <div class="meta-icons">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="meta-icon">
        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z"/>
        <path d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z"/>
      </svg>
      <span class="meta-date">25 Des 2023</span>
    </div>
  </div>
</div>



    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

  /* SPACE MONO MURNI - SEMUA TEKS */
  * {
    font-family: 'Space Mono', monospace !important;
  }





/* Image Container */
.image-container {
  margin-bottom: 20px;
  display: flex;
  justify-content: center;  /* Center the image */
}

.about-me-image {
  width: 100%;
  max-width: 500px;  /* Atur lebar maksimal gambar */
  height: auto;
  border-radius: 15px;  /* Border radius untuk gambar */
  object-fit: cover;  /* Agar gambar tidak terdistorsi */
}

/* About Me Section */
.about-me-section {
  padding: 20px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 15px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  max-width: 600px;
  margin: 0 auto;  /* Untuk meletakkan section di tengah */
}

.about-me-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.about-me-title {
  font-size: 1.6rem;
  font-weight: 700;
  color: #fff;
  margin: 0;
  font-family: 'Space Mono', monospace;
}

.meta-icons {
  display: flex;
  align-items: center;
  gap: 8px;
}

.meta-icon {
  color: rgba(255, 255, 255, 0.8);
}

.meta-date {
  color: rgba(255, 255, 255, 0.8);
  font-size: 0.9rem;
  font-family: 'Space Mono', monospace;
}

/* Responsive */
@media (max-width: 768px) {
  .about-me-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }

  .about-me-title {
    font-size: 1.2rem;
  }
}








  body {
    background: #111;
    color: #fff;
    font-family: 'Space Mono', monospace;
    font-size: 18px;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Mono', monospace;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header */
  .header-section {
    margin-bottom: 40px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 20px;
  }

  .title-container {
    flex: 1;
  }

  .big-title {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 10px 0;
    color: #fff;
    font-family: 'Space Mono', monospace;
  }

  /* Subtitle Animation */
  .subtitle-animation {
    position: relative;
    display: inline-block;
  }

  .subtitle-text {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease-in-out infinite;
    font-weight: 600;
    font-family: 'Space Mono', monospace;
  }

  .floating-dots {
    position: absolute;
    right: -40px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 4px;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #4ecdc4;
    animation: floatDots 2s ease-in-out infinite;
  }

  .dot:nth-child(2) {
    background: #ff6b6b;
    animation-delay: 0.2s;
  }

  .dot:nth-child(3) {
    background: #feca57;
    animation-delay: 0.4s;
  }

  @keyframes floatDots {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .all-blog-link {
    font-size: 1.4rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.85);
    padding: 12px 20px;
    border: 2px solid rgba(255,255,255,0.4);
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    background: rgba(255,255,255,0.1);
    font-family: 'Space Mono', monospace;
  }

  .all-blog-link:hover {
    background: rgba(255,255,255,0.2);
    color: #fff;
  }

  /* Auto Featured Section */
  .auto-featured-section {
    margin: 50px 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 15px;
    font-family: 'Space Mono', monospace;
  }

  .highlight-badge {
    background: linear-gradient(135deg, #ff6b6b, #ffa726);
    color: white;
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    font-family: 'Space Mono', monospace;
  }

  .auto-featured-card {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 30px;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 30px;
    transition: all 0.3s ease;
  }

  .auto-featured-card:hover {
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-5px);
  }

  .featured-image-auto {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
  }

  .featured-img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
  }

  .featured-badge-auto {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #ff6b6b;
    color: white;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    font-family: 'Space Mono', monospace;
  }

  .featured-content-auto {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .post-meta-auto {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    flex-wrap: wrap;
  }

  .date-auto, .read-time-auto {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    background: rgba(255,255,255,0.1);
    padding: 4px 8px;
    border-radius: 6px;
    font-family: 'Space Mono', monospace;
  }

  .new-badge-auto {
    background: #4ecdc4;
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    font-family: 'Space Mono', monospace;
  }

  .post-title-auto {
    font-size: 2.2rem;
    font-weight: 700;
    margin: 10px 0;
    color: #fff;
    line-height: 1.3;
    font-family: 'Space Mono', monospace;
  }

  .post-desc-auto {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 1.1rem;
    font-family: 'Space Mono', monospace;
  }

  .tags-auto {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .tag-auto {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #fff;
    padding: 6px 12px;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
    font-family: 'Space Mono', monospace;
  }

  .read-more-auto {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    color: white;
    padding: 10px 20px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    width: fit-content;
    font-family: 'Space Mono', monospace;
  }

  .read-more-auto:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 25px;
    }
  }

  @media (max-width: 768px) {
    body {
      font-size: 16px;
    }

    .header-content {
      flex-direction: column;
      text-align: center;
    }

    .big-title {
      font-size: 2.8rem;
    }

    .linebox {
      padding: 25px 20px;
    }

    .all-blog-link {
      width: 100%;
      justify-content: center;
      font-size: 1.2rem;
    }

    .auto-featured-card {
      grid-template-columns: 1fr;
    }

    .floating-dots {
      position: static;
      transform: none;
      justify-content: center;
      margin-top: 10px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 20px 15px;
    }

    .big-title {
      font-size: 2.2rem;
    }

    .linebox {
      padding: 20px 15px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const titleElement = document.getElementById('mainTitle');
    
    const titleVariations = [
      "Blog",
      "Articles", 
      "Stories",
      "Thoughts",
      "Journal",
      "Notes",
      "Ideas",
      "Updates"
    ];

    let currentIndex = 0;

    function changeTitle() {
      titleElement.style.opacity = '0';
      
      setTimeout(() => {
        titleElement.textContent = titleVariations[currentIndex];
        titleElement.style.opacity = '1';
        
        currentIndex = (currentIndex + 1) % titleVariations.length;
        
        setTimeout(changeTitle, 2000);
      }, 500);
    }

    // Start animation
    setTimeout(changeTitle, 1000);
  });
</script>






