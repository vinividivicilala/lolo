<script is:inline>
  // Script yang sudah ada tetap sama
  document.addEventListener('DOMContentLoaded', function() {
    const titleElement = document.getElementById('mainTitle');
    const cursorElement = document.querySelector('.title-cursor');
    
    const titleVariations = [
      "Blog",
      "Articles",
      "Stories",
      "Thoughts",
      "Journal",
      "Notes",
      "Ideas",
      "Updates"
    ];

    const animationEffects = [
      'typing-effect',
      'fade-effect',
      'slide-effect',
      'bounce-effect',
      'glitch-effect',
      'rotate-effect',
      'scale-effect',
      'gradient-effect'
    ];

    let currentIndex = 0;
    let animationIndex = 0;

    function changeTitleWithAnimation() {
      titleElement.className = 'title-text';
      titleElement.classList.add(animationEffects[animationIndex]);
      titleElement.textContent = titleVariations[currentIndex];
      updateCursorColor(animationIndex);
      
      currentIndex = (currentIndex + 1) % titleVariations.length;
      animationIndex = (animationIndex + 1) % animationEffects.length;
      
      setTimeout(changeTitleWithAnimation, 2000);
    }

    function updateCursorColor(animIndex) {
      const colors = [
        '#ff6b6b', '#4ecdc4', '#45b7d1', '#feca57', 
        '#ff9ff3', '#54a0ff', '#5f27cd', '#00d2d3'
      ];
      cursorElement.style.color = colors[animIndex];
    }

    // Script baru untuk Search Functionality
    const searchInput = document.getElementById('blogSearch');
    const searchResults = document.getElementById('searchResults');

    if (searchInput) {
      searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase().trim();
        
        if (searchTerm.length === 0) {
          searchResults.style.display = 'none';
          return;
        }

        // Simulasi data blog untuk search
        const blogPosts = [
          "Konten Blog Akan Segera Hadir",
          "Tips Pengembangan Web Modern",
          "Optimisasi SEO untuk Developer",
          "Framework JavaScript Terpopuler 2024",
          "Mastering CSS Grid dan Flexbox",
          "React vs Vue: Perbandingan Mendalam",
          "Tips Optimisasi Performance Website",
          "Panduan Lengkap TypeScript untuk Pemula"
        ];

        const filteredPosts = blogPosts.filter(post => 
          post.toLowerCase().includes(searchTerm)
        );

        displaySearchResults(filteredPosts, searchTerm);
      });

      searchInput.addEventListener('focus', function() {
        if (this.value.trim().length > 0) {
          searchResults.style.display = 'block';
        }
      });

      document.addEventListener('click', function(e) {
        if (!searchContainer.contains(e.target)) {
          searchResults.style.display = 'none';
        }
      });
    }

    function displaySearchResults(results, searchTerm) {
      if (results.length === 0) {
        searchResults.innerHTML = '<div class="search-result-item">Tidak ada hasil ditemukan</div>';
      } else {
        searchResults.innerHTML = results.map(post => `
          <div class="search-result-item" onclick="selectSearchResult('${post}')">
            ${highlightSearchTerm(post, searchTerm)}
          </div>
        `).join('');
      }
      searchResults.style.display = 'block';
    }

    function highlightSearchTerm(text, term) {
      const regex = new RegExp(`(${term})`, 'gi');
      return text.replace(regex, '<mark>$1</mark>');
    }

    function selectSearchResult(selectedText) {
      searchInput.value = selectedText;
      searchResults.style.display = 'none';
      // Redirect atau filter blog berdasarkan pilihan
      console.log('Selected:', selectedText);
    }

    // Script untuk animasi counter
    function animateCounters() {
      const counters = document.querySelectorAll('.stat-number');
      
      counters.forEach(counter => {
        const target = parseInt(counter.textContent);
        let current = 0;
        const increment = target / 50;
        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            counter.textContent = target;
            clearInterval(timer);
          } else {
            counter.textContent = Math.floor(current);
          }
        }, 30);
      });
    }

    // Auto-update simulation
    function simulateUpdate() {
      setTimeout(() => {
        const newPosts = document.getElementById('newPostsCounter');
        const current = parseInt(newPosts.textContent);
        newPosts.textContent = current + 1;
        animateCounters();
      }, 5000);
    }

    // Start animations
    setTimeout(changeTitleWithAnimation, 1000);
    setTimeout(animateCounters, 500);
    simulateUpdate();

    setInterval(() => {
      cursorElement.style.transform = `translateY(${Math.random() * 5 - 2.5}px)`;
    }, 300);

    // Expose function to global scope for onclick
    window.selectSearchResult = selectSearchResult;
  });
</script>
