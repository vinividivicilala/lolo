// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog dengan desain modern dan animasi menarik." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header Section -->
      <section class="header-section">
        <div class="header-content">
          <div class="title-container">
            <!-- Sub judul "Latest" di atas judul utama -->
            <div class="latest-subtitle">
              <span>Latest</span>
            </div>
            <h1 class="big-title">
              <span class="animated-title">
                <span class="title-text" id="mainTitle">Blog</span>
                <!-- Hapus cursor/garis "|" -->
              </span>
            </h1>
          </div>
          <a href="/blog/all" class="all-blog-link">
            All Blog 
            <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Blog Content Grid -->
      <div class="blog-grid">
        <!-- Blog Content Section 1 -->
        <article class="blog-card">
          <div class="blog-image">
            <div class="image-placeholder">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21,15 16,10 5,21"></polyline>
              </svg>
            </div>
          </div>
          <div class="blog-content">
            <div class="blog-meta">
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>15 Mar 2024</span>
              </div>
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <span>5 min read</span>
              </div>
            </div>

            <h2 class="blog-title">Konten Blog Akan Segera Hadir</h2>
            <p class="desc">
              Semua artikel akan tampil di sini dengan desain bersih dan modern. 
              Stay tuned untuk update terbaru!
            </p>

            <div class="tag-list">
              <span class="tag">Astro</span>
              <span class="tag">Blog</span>
              <span class="tag">Coming Soon</span>
            </div>
          </div>
        </article>

        <!-- Blog Content Section 2 -->
        <article class="blog-card">
          <div class="blog-image">
            <div class="image-placeholder">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14,2 14,8 20,8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10,9 9,9 8,9"></polyline>
              </svg>
            </div>
          </div>
          <div class="blog-content">
            <div class="blog-meta">
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>20 Mar 2024</span>
              </div>
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <span>7 min read</span>
              </div>
            </div>

            <h2 class="blog-title">Tips Pengembangan Web Modern</h2>
            <p class="desc">
              Pelajari teknik-teknik terbaru dalam pengembangan web modern 
              untuk meningkatkan performa dan user experience.
            </p>

            <div class="tag-list">
              <span class="tag">Web Dev</span>
              <span class="tag">Tips</span>
              <span class="tag">Modern</span>
            </div>
          </div>
        </article>

        <!-- Blog Content Section 3 -->
        <article class="blog-card">
          <div class="blog-image">
            <div class="image-placeholder">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M21 17v2a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-2"></path>
                <polyline points="7,10 12,15 17,10"></polyline>
              </svg>
            </div>
          </div>
          <div class="blog-content">
            <div class="blog-meta">
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>25 Mar 2024</span>
              </div>
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <span>10 min read</span>
              </div>
            </div>

            <h2 class="blog-title">Optimisasi SEO untuk Developer</h2>
            <p class="desc">
              Panduan lengkap optimisasi SEO teknikal untuk developer 
              yang ingin meningkatkan ranking website di mesin pencari.
            </p>

            <div class="tag-list">
              <span class="tag">SEO</span>
              <span class="tag">Optimization</span>
              <span class="tag">Technical</span>
            </div>
          </div>
        </article>

        <!-- Blog Content Section 4 -->
        <article class="blog-card">
          <div class="blog-image">
            <div class="image-placeholder">
              <svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polygon points="12,2 22,8.5 22,15.5 12,22 2,15.5 2,8.5 12,2"></polygon>
                <line x1="12" y1="22" x2="12" y2="15.5"></line>
                <polyline points="22,8.5 12,15.5 2,8.5"></polyline>
                <polyline points="2,15.5 12,8.5 22,15.5"></polyline>
                <line x1="12" y1="15.5" x2="12" y2="8.5"></line>
              </svg>
            </div>
          </div>
          <div class="blog-content">
            <div class="blog-meta">
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <span>30 Mar 2024</span>
              </div>
              <div class="meta-item">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                  <circle cx="12" cy="12" r="3"/>
                </svg>
                <span>8 min read</span>
              </div>
            </div>

            <h2 class="blog-title">Framework JavaScript Terpopuler 2024</h2>
            <p class="desc">
              Review mendalam tentang framework JavaScript terpopuler 
              tahun 2024 dan perbandingan fitur-fiturnya.
            </p>

            <div class="tag-list">
              <span class="tag">JavaScript</span>
              <span class="tag">Framework</span>
              <span class="tag">2024</span>
            </div>
          </div>
        </article>
      </div>
    </main>
  </div>
</Layout>

<style>
  body {
    background: #111;
    color: #fff;
    font-family: 'Inter', sans-serif;
    font-size: 18px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header */
  .header-section {
    margin-bottom: 60px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 20px;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  /* Sub judul "Latest" */
  .latest-subtitle {
    font-size: 18px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 3px;
    margin-bottom: 10px;
    position: relative;
    display: inline-block;
  }

  .latest-subtitle::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, #4ecdc4, #45b7d1);
    border-radius: 2px;
  }

  .big-title {
    font-size: 64px;
    font-weight: 800;
    margin: 0;
    color: #fff;
    line-height: 1;
  }

  /* Animated Title Styles - tanpa cursor */
  .animated-title {
    display: inline-block;
    position: relative;
  }

  .title-text {
    display: inline-block;
    position: relative;
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease-in-out infinite;
  }

  /* Animation Effects */
  .typing-effect {
    animation: typing 0.5s ease-in-out;
  }

  .fade-effect {
    animation: fadeInOut 2s ease-in-out;
  }

  .slide-effect {
    animation: slideIn 1s ease-out;
  }

  .bounce-effect {
    animation: bounce 1s ease;
  }

  .glitch-effect {
    animation: glitch 0.5s ease-in-out;
  }

  .rotate-effect {
    animation: rotate 1s ease-in-out;
  }

  .scale-effect {
    animation: scale 0.8s ease-in-out;
  }

  .gradient-effect {
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4, #feca57);
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease-in-out infinite;
  }

  /* Keyframes for animations */
  @keyframes typing {
    from { width: 0; opacity: 0; }
    to { width: auto; opacity: 1; }
  }

  @keyframes fadeInOut {
    0% { opacity: 0; transform: translateY(-20px); }
    50% { opacity: 1; transform: translateY(0); }
    100% { opacity: 0; transform: translateY(20px); }
  }

  @keyframes slideIn {
    0% { transform: translateX(-100%); opacity: 0; }
    100% { transform: translateX(0); opacity: 1; }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-30px); }
    60% { transform: translateY(-15px); }
  }

  @keyframes glitch {
    0% { transform: translate(0); }
    20% { transform: translate(-5px, 5px); }
    40% { transform: translate(-5px, -5px); }
    60% { transform: translate(5px, 5px); }
    80% { transform: translate(5px, -5px); }
    100% { transform: translate(0); }
  }

  @keyframes rotate {
    0% { transform: rotate(0deg) scale(0.5); opacity: 0; }
    100% { transform: rotate(360deg) scale(1); opacity: 1; }
  }

  @keyframes scale {
    0% { transform: scale(0); opacity: 0; }
    70% { transform: scale(1.2); opacity: 1; }
    100% { transform: scale(1); opacity: 1; }
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .all-blog-link {
    font-size: 1.4rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.85);
    padding: 12px 20px;
    border: 2px solid rgba(255,255,255,0.4);
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    background: rgba(255,255,255,0.1);
  }

  .all-blog-link:hover {
    background: rgba(255,255,255,0.2);
    color: #fff;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
  }

  .arrow-icon {
    stroke: currentColor;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
    margin-top: 20px;
  }

  /* Blog Card */
  .blog-card {
    border-radius: 24px;
    background: rgba(255,255,255,0.08);
    border: 1px solid rgba(255,255,255,0.15);
    overflow: hidden;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    display: flex;
    flex-direction: column;
  }

  .blog-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    border-color: rgba(255,255,255,0.3);
  }

  .blog-image {
    height: 200px;
    background: rgba(255,255,255,0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .image-placeholder {
    color: rgba(255,255,255,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-content {
    padding: 30px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  /* Blog Meta */
  .blog-meta {
    display: flex;
    gap: 20px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.8);
    font-size: 1rem;
  }

  /* Blog Title */
  .blog-title {
    font-size: 2.2rem;
    font-weight: 700;
    margin: 20px 0;
    color: #fff;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .blog-card:hover .blog-title {
    color: #4ecdc4;
  }

  .desc {
    color: rgba(255,255,255,0.85);
    line-height: 1.7;
    margin-bottom: 25px;
    font-size: 1.1rem;
    flex-grow: 1;
  }

  /* Tags */
  .tag-list {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .tag {
    background: rgba(255,255,255,0.15);
    border: 1px solid rgba(255,255,255,0.3);
    color: #fff;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .tag:hover {
    background: rgba(255,255,255,0.25);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }

  @media (max-width: 768px) {
    body {
      font-size: 16px;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .big-title {
      font-size: 3.5rem;
    }

    .latest-subtitle {
      font-size: 16px;
    }

    .blog-title {
      font-size: 1.8rem;
    }

    .desc {
      font-size: 1rem;
    }

    .blog-content {
      padding: 25px 20px;
    }

    .all-blog-link {
      width: 100%;
      justify-content: center;
      font-size: 1.2rem;
      margin-top: 20px;
    }

    .blog-grid {
      gap: 25px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 20px 15px;
    }

    .big-title {
      font-size: 2.5rem;
    }

    .latest-subtitle {
      font-size: 14px;
      letter-spacing: 2px;
    }

    .blog-title {
      font-size: 1.5rem;
    }

    .blog-content {
      padding: 20px 15px;
    }

    .blog-meta {
      gap: 15px;
    }

    .meta-item {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const titleElement = document.getElementById('mainTitle');
    
    const titleVariations = [
      "Blog",
      "Articles",
      "Stories",
      "Thoughts",
      "Journal",
      "Notes",
      "Ideas",
      "Updates"
    ];

    const animationEffects = [
      'typing-effect',
      'fade-effect',
      'slide-effect',
      'bounce-effect',
      'glitch-effect',
      'rotate-effect',
      'scale-effect',
      'gradient-effect'
    ];

    let currentIndex = 0;
    let animationIndex = 0;

    function changeTitleWithAnimation() {
      // Remove previous animation classes
      titleElement.className = 'title-text';
      
      // Add current animation effect
      titleElement.classList.add(animationEffects[animationIndex]);
      
      // Change text
      titleElement.textContent = titleVariations[currentIndex];
      
      // Increment indexes
      currentIndex = (currentIndex + 1) % titleVariations.length;
      animationIndex = (animationIndex + 1) % animationEffects.length;
      
      // Schedule next change
      setTimeout(changeTitleWithAnimation, 2000);
    }

    // Start the animation sequence
    setTimeout(changeTitleWithAnimation, 1000);

    // Add hover effects to blog cards
    const blogCards = document.querySelectorAll('.blog-card');
    blogCards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-10px) scale(1.02)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
      });
    });
  });
</script>
