---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header Section -->
      <section class="header-section">
        <div class="header-content">
          <h1 class="big-title">Blog</h1>
          <a href="/blog/all" class="all-blog-link">
            All Blog 
            <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Blog Grid -->
      <section class="blog-grid">
        <!-- Box 1 -->
        <div class="linebox">
          <div class="blog-meta">
            <div class="meta-item">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>15 Mar 2024</span>
            </div>
            <div class="meta-item">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              <span>5 min read</span>
            </div>
          </div>

          <h2 class="blog-title">Konten Blog Akan Segera Hadir</h2>
          <p class="desc">
            Semua artikel akan tampil di sini dengan desain bersih dan modern. 
            Stay tuned untuk update terbaru!
          </p>

          <div class="tag-list">
            <span class="tag">Astro</span>
            <span class="tag">Blog</span>
            <span class="tag">Coming Soon</span>
          </div>
        </div>

        <!-- Box 2 -->
        <div class="linebox">
          <h2 class="blog-title">Artikel Kedua</h2>
          <p class="desc">Preview artikel kedua dengan linebox yang sama.</p>
        </div>

        <!-- Box 3 -->
        <div class="linebox">
          <h2 class="blog-title">Artikel Ketiga</h2>
          <p class="desc">Preview artikel ketiga dengan desain konsisten.</p>
        </div>

        <!-- Box 4 -->
        <div class="linebox">
          <h2 class="blog-title">Artikel Keempat</h2>
          <p class="desc">Preview artikel keempat agar sejajar ke samping.</p>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  body {
    background: #111;
    color: #fff;
    font-family: 'Inter', sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header */
  .header-section {
    margin-bottom: 40px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .big-title {
    font-size: 50px;
    font-weight: 900;
    margin: 0;
    color: #fff;
  }

  .all-blog-link {
    font-size: 1.5rem;
    font-weight: 800;
    display: flex;
    align-items: center;
    gap: 10px;
    color: rgba(255,255,255,0.9);
    padding: 12px 18px;
    border: 2px solid rgba(255,255,255,0.6);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    background: rgba(255,255,255,0.12);
  }

  .all-blog-link:hover {
    background: rgba(255,255,255,0.25);
    color: #fff;
  }

  .arrow-icon {
    stroke: currentColor;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  /* Linebox */
  .linebox {
    border: 2px solid rgba(255,255,255,0.6);
    background: rgba(255,255,255,0.08);
    border-radius: 16px;
    padding: 35px;
    color: #fff;
    font-size: 1.1rem;
  }

  /* Blog Meta */
  .blog-meta {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.85);
    font-size: 1rem;
  }

  /* Blog Title */
  .blog-title {
    font-size: 2.2rem;
    font-weight: 800;
    margin: 15px 0;
    color: #fff;
  }

  .desc {
    color: rgba(255,255,255,0.9);
    line-height: 1.7;
    margin-bottom: 20px;
    font-size: 1.05rem;
  }

  /* Tags */
  .tag-list {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .tag {
    background: rgba(255,255,255,0.15);
    border: 1px solid rgba(255,255,255,0.4);
    color: #fff;
    padding: 6px 12px;
    border-radius: 18px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .big-title {
      font-size: 2.8rem;
    }

    .blog-title {
      font-size: 1.6rem;
    }
  }
</style>
