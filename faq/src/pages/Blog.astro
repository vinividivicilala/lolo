---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header Section -->
      <section class="header-section">
        <div class="header-content">
          <h1 class="big-title">Blog</h1>
          <a href="/blog/all" class="all-blog-link">All Blog â†’</a>
        </div>
      </section>

      <!-- Blog Content Section -->
      <section class="linebox">
        <div class="blog-meta">
          <span class="date-icon">ðŸ“…</span>
          <span class="date">January 15, 2024</span>
          <span class="read-time">â€¢ 5 min read</span>
          <span class="label-tag">Design</span>
        </div>
        
        <h2 class="blog-title">Konten Blog Akan Segera Hadir</h2>
        
        <p class="desc">
          Semua artikel akan tampil di sini dengan desain bersih dan modern. 
          Tunggu update terbaru untuk membaca konten menarik seputar teknologi, 
          pengembangan web, dan tips programming.
        </p>
      </section>
    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background: #f2f3f5;
    color: #222;
    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect width="100" height="100" fill="%23f2f3f5"/><path d="M0 50L50 0L100 50L50 100Z" fill="%23e8eaed" opacity="0.3"/></svg>');
    background-size: 300px 300px;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header Section */
  .header-section {
    margin-bottom: 30px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .big-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0;
    color: #111;
    background: linear-gradient(135deg, #111 0%, #444 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .all-blog-link {
    font-size: 1.1rem;
    font-weight: 600;
    color: #3b82f6;
    text-decoration: none;
    padding: 10px 20px;
    border: 2px solid #3b82f6;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .all-blog-link:hover {
    background: #3b82f6;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  /* Linebox Section */
  .linebox {
    background: rgba(255, 255, 255, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.6);
    border-radius: 20px;
    padding: 40px;
    backdrop-filter: blur(15px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.08);
    position: relative;
    overflow: hidden;
  }

  .linebox::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 6px;
    height: 100%;
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    border-radius: 20px 0 0 20px;
  }

  /* Blog Meta */
  .blog-meta {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .date-icon {
    font-size: 1.2rem;
  }

  .date, .read-time {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
  }

  .label-tag {
    background: linear-gradient(135deg, #3b82f6, #8b5cf6);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 20px;
    color: #111;
    line-height: 1.3;
  }

  .desc {
    font-size: 1.1rem;
    font-weight: 400;
    line-height: 1.7;
    color: #444;
    margin: 0;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .big-title {
      font-size: 2.5rem;
    }

    .all-blog-link {
      align-self: stretch;
      text-align: center;
    }

    .linebox {
      padding: 30px 25px;
    }

    .blog-title {
      font-size: 1.6rem;
    }

    .desc {
      font-size: 1rem;
      text-align: left;
    }

    .blog-meta {
      gap: 10px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 20px 15px;
    }
    
    .big-title {
      font-size: 2rem;
    }
    
    .linebox {
      padding: 25px 20px;
    }
    
    .blog-title {
      font-size: 1.4rem;
    }
  }
</style>
