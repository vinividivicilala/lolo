<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

  /* SPACE MONO MURNI - SEMUA TEKS */
  * {
    font-family: 'Space Mono', monospace !important;
  }



/* Blog Grid Section */
.blog-grid-section {
  margin-top: 60px;
}

.subtitle-section {
  margin-bottom: 30px;
}

.section-subtitle {
  font-size: 2rem;
  font-weight: 700;
  color: #fff;
  margin: 0 0 10px 0;
  font-family: 'Space Mono', monospace;
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: inline-block;
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 25px;
  margin-bottom: 60px;
}

.blog-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 12px;
  padding: 0;
  transition: all 0.3s ease;
  overflow: hidden;
}

.blog-card:hover {
  border-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
}

.image-container {
  margin-bottom: 0;
}

.blog-image {
  width: 100%;
  height: 180px;
  object-fit: cover;
  border-radius: 0;
}

.blog-content {
  padding: 20px;
}

.blog-title {
  font-size: 1.3rem;
  font-weight: 700;
  color: #fff;
  margin: 0 0 12px 0;
  line-height: 1.4;
  font-family: 'Space Mono', monospace;
}

.meta-icons {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 15px;
}

.meta-icon {
  color: rgba(255, 255, 255, 0.7);
}

.meta-date {
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.85rem;
  font-family: 'Space Mono', monospace;
}

.blog-excerpt {
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  margin: 0;
  font-size: 0.95rem;
  font-family: 'Space Mono', monospace;
}

/* Responsive */
@media (max-width: 1024px) {
  .blog-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
}

@media (max-width: 768px) {
  .blog-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .section-subtitle {
    font-size: 1.6rem;
  }
  
  .blog-content {
    padding: 15px;
  }
}

@media (max-width: 480px) {
  .blog-grid {
    gap: 15px;
  }
  
  .blog-title {
    font-size: 1.2rem;
  }
  
  .section-subtitle {
    font-size: 1.4rem;
  }
  
  .blog-image {
    height: 160px;
  }
}





