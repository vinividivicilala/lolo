---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- HEADER SECTION -->
      <section class="header-section">
        <div class="header-content">
          <div class="title-container">
            <h1 class="big-title">
              <span class="animated-title">
                <span class="title-text" id="mainTitle">Blog</span>
              </span>
            </h1>
            <div class="subtitle-animation">
              <span class="subtitle-text">Tempat Berbagi Ilmu & Inspirasi</span>
              <div class="floating-dots">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
              </div>
            </div>
          </div>
          <a href="/blog/all" class="all-blog-link">
            All Blog 
            <svg xmlns="http://www.w3.org/2000/svg" class="arrow-icon" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- BLOG SECTION - TENTANG DIRI -->
      <section class="blog-section">
        <div class="section-header">
          <h2 class="section-title">
            Tentang Diri
            <span class="highlight-badge" id="tentangDiriCount">3 Artikel</span>
          </h2>
        </div>

        <div class="blog-grid">
          <!-- Blog 1 -->
          <div class="blog-card">
            <div class="blog-images">
              <img src="/images/5.jpg" alt="Tentang Diri" class="blog-image" />
            </div>
            <div class="blog-content">
              <div class="blog-meta">
                <span class="blog-date">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z"/>
                    <path d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z"/>
                  </svg>
                  25 Des 2023
                </span>
                <span class="blog-read-time">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                  </svg>
                  5 min read
                </span>
                <span class="blog-badge">New</span>
              </div>
              <h3 class="blog-title">Perjalanan Menjadi Developer</h3>
              <p class="blog-desc">Bagaimana saya memulai perjalanan sebagai developer dan tantangan yang dihadapi selama proses pembelajaran.</p>
              <div class="blog-tags">
                <span class="blog-tag">Programming</span>
                <span class="blog-tag">Journey</span>
              </div>
              <a href="#" class="blog-read-more">
                Baca Selengkapnya
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Blog 2 -->
          <div class="blog-card">
            <div class="blog-images">
              <img src="/images/5.jpg" alt="Tentang Diri" class="blog-image" />
            </div>
            <div class="blog-content">
              <div class="blog-meta">
                <span class="blog-date">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z"/>
                    <path d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z"/>
                  </svg>
                  20 Des 2023
                </span>
                <span class="blog-read-time">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                  </svg>
                  7 min read
                </span>
              </div>
              <h3 class="blog-title">Passion dalam Teknologi</h3>
              <p class="blog-desc">Menjelajahi minat dan passion saya di dunia teknologi serta bagaimana hal itu membentuk karir saya.</p>
              <div class="blog-tags">
                <span class="blog-tag">Technology</span>
                <span class="blog-tag">Passion</span>
              </div>
              <a href="#" class="blog-read-more">
                Baca Selengkapnya
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- BLOG SECTION - RANDOM -->
      <section class="blog-section">
        <div class="section-header">
          <h2 class="section-title">
            Random
            <span class="highlight-badge" id="randomCount">2 Artikel</span>
          </h2>
        </div>

        <div class="blog-grid">
          <!-- Blog 4 -->
          <div class="blog-card">
            <div class="blog-images">
              <img src="/images/5.jpg" alt="Random" class="blog-image" />
            </div>
            <div class="blog-content">
              <div class="blog-meta">
                <span class="blog-date">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z"/>
                    <path d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z"/>
                  </svg>
                  10 Des 2023
                </span>
                <span class="blog-read-time">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                  </svg>
                  6 min read
                </span>
                <span class="blog-badge">New</span>
              </div>
              <h3 class="blog-title">Tips Produktivitas Harian</h3>
              <p class="blog-desc">Metode dan teknik yang saya gunakan untuk tetap produktif dalam pekerjaan sehari-hari.</p>
              <div class="blog-tags">
                <span class="blog-tag">Productivity</span>
                <span class="blog-tag">Tips</span>
              </div>
              <a href="#" class="blog-read-more">
                Baca Selengkapnya
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                  <path fill-rule="evenodd" d="M4 8a.5.5 0 0 1 .5-.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5A.5.5 0 0 1 4 8z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');

  * {
    font-family: 'Space Mono', monospace !important;
  }

  body {
    background: #111;
    color: #fff;
    font-family: 'Space Mono', monospace;
    font-size: 18px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header */
  .header-section {
    margin-bottom: 40px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 20px;
  }

  .title-container {
    flex: 1;
  }

  .big-title {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 10px 0;
    color: #fff;
  }

  /* Subtitle Animation */
  .subtitle-animation {
    position: relative;
    display: inline-block;
  }

  .subtitle-text {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 3s ease-in-out infinite;
    font-weight: 600;
  }

  .floating-dots {
    position: absolute;
    right: -40px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 4px;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #4ecdc4;
    animation: floatDots 2s ease-in-out infinite;
  }

  .dot:nth-child(2) {
    background: #ff6b6b;
    animation-delay: 0.2s;
  }

  .dot:nth-child(3) {
    background: #feca57;
    animation-delay: 0.4s;
  }

  @keyframes floatDots {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .all-blog-link {
    font-size: 1.4rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8px;
    color: rgba(255,255,255,0.85);
    padding: 12px 20px;
    border: 2px solid rgba(255,255,255,0.4);
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
    background: rgba(255,255,255,0.1);
  }

  .all-blog-link:hover {
    background: rgba(255,255,255,0.2);
    color: #fff;
  }

  /* Blog Section */
  .blog-section {
    margin: 60px 0;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .highlight-badge {
    background: linear-gradient(135deg, #ff6b6b, #ffa726);
    color: white;
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  /* Blog Grid */
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
  }

  /* Blog Card */
  .blog-card {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 30px;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 30px;
    transition: all 0.3s ease;
  }

  .blog-card:hover {
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-5px);
  }

  /* Blog Images */
  .blog-images {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .blog-image {
    width: 100%;
    height: 120px;
    object-fit: cover;
    border-radius: 15px;
  }

  /* Blog Content */
  .blog-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .blog-meta {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
    flex-wrap: wrap;
    align-items: center;
  }

  .blog-date, .blog-read-time {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    background: rgba(255,255,255,0.1);
    padding: 8px 12px;
    border-radius: 6px;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .blog-badge {
    background: #4ecdc4;
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 10px 0;
    color: #fff;
    line-height: 1.3;
  }

  .blog-desc {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 1rem;
  }

  .blog-tags {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .blog-tag {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #fff;
    padding: 6px 12px;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .blog-read-more {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.9);
    padding: 8px 0;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    width: fit-content;
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
  }

  .blog-read-more:hover {
    color: #fff;
    border-bottom-color: #fff;
    gap: 12px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    body {
      font-size: 16px;
    }

    .header-content {
      flex-direction: column;
      text-align: center;
    }

    .big-title {
      font-size: 2.8rem;
    }

    .all-blog-link {
      width: 100%;
      justify-content: center;
      font-size: 1.2rem;
    }

    .blog-card {
      grid-template-columns: 1fr;
    }

    .blog-images {
      flex-direction: row;
      justify-content: space-between;
    }

    .blog-image {
      width: 32%;
      height: 100px;
    }

    .floating-dots {
      position: static;
      transform: none;
      justify-content: center;
      margin-top: 10px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 20px 15px;
    }

    .big-title {
      font-size: 2.2rem;
    }

    .blog-images {
      flex-direction: column;
    }

    .blog-image {
      width: 100%;
      height: 120px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Title animation
    const titleElement = document.getElementById('mainTitle');
    const titleVariations = [
      "Blog",
      "Articles", 
      "Stories",
      "Thoughts",
      "Journal",
      "Notes",
      "Ideas",
      "Updates"
    ];

    let currentIndex = 0;

    function changeTitle() {
      titleElement.style.opacity = '0';
      
      setTimeout(() => {
        titleElement.textContent = titleVariations[currentIndex];
        titleElement.style.opacity = '1';
        
        currentIndex = (currentIndex + 1) % titleVariations.length;
        
        setTimeout(changeTitle, 2000);
      }, 500);
    }

    // Auto count blog posts
    function updateBlogCount() {
      const tentangDiriSection = document.querySelector('.blog-section:nth-of-type(1)');
      const randomSection = document.querySelector('.blog-section:nth-of-type(2)');
      
      const tentangDiriCount = tentangDiriSection ? tentangDiriSection.querySelectorAll('.blog-card').length : 0;
      const randomCount = randomSection ? randomSection.querySelectorAll('.blog-card').length : 0;
      
      const tentangDiriBadge = document.getElementById('tentangDiriCount');
      const randomBadge = document.getElementById('randomCount');
      
      if (tentangDiriBadge) {
        tentangDiriBadge.textContent = `${tentangDiriCount} Artikel${tentangDiriCount !== 1 ? '' : ''}`;
      }
      
      if (randomBadge) {
        randomBadge.textContent = `${randomCount} Artikel${randomCount !== 1 ? '' : ''}`;
      }
    }

    // Start animations
    setTimeout(changeTitle, 1000);
    updateBlogCount();
  });
</script>
