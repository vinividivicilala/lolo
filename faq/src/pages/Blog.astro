    position: relative;
    overflow: hidden;
  }

  .linebox::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--gradient-color-1), var(--gradient-color-2));
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .linebox:hover::before {
    transform: scaleX(1);
