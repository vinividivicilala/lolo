---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header Section -->
      <section class="header-section">
        <div class="header-content">
          <h1 class="big-title">Blog</h1>
          <a href="/blog/all" class="all-blog-link">All Blog ‚Üí</a>
        </div>
      </section>

      <!-- Content Section -->
      <section class="linebox">
        <h2 class="blog-subtitle">Halaman Blog</h2>
        <p class="desc">
          Konten blog akan segera hadir. Semua artikel akan tampil di sini
          dengan desain bersih dan modern.
        </p>
        
        <!-- Blog Meta Info -->
        <div class="blog-meta">
          <span class="meta-item">
            <span class="icon">üìÖ</span>
            <span class="text">January 15, 2024</span>
          </span>
          <span class="meta-item">
            <span class="icon">‚è±Ô∏è</span>
            <span class="text">5 min read</span>
          </span>
          <span class="label-tag">Design</span>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background: #f2f3f5;
    color: #222;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header Section */
  .header-section {
    margin-bottom: 30px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .big-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0;
    color: #111;
  }

  .all-blog-link {
    font-size: 1.1rem;
    font-weight: 600;
    color: #3b82f6;
    text-decoration: none;
    padding: 10px 20px;
    border: 2px solid #3b82f6;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .all-blog-link:hover {
    background: #3b82f6;
    color: white;
  }

  /* Linebox Section - tetap sama seperti original */
  .linebox {
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 16px;
    padding: 50px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    position: relative;
  }

  .blog-subtitle {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 20px;
    color: #111;
  }

  .desc {
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.8;
    color: #333;
    margin-bottom: 30px;
  }

  /* Blog Meta Styles */
  .blog-meta {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
    padding-top: 20px;
    border-top: 1px solid rgba(0,0,0,0.1);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: #666;
  }

  .icon {
    font-size: 1rem;
  }

  .label-tag {
    background: #3b82f6;
    color: white;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .big-title {
      font-size: 2.5rem;
    }

    .blog-subtitle {
      font-size: 2rem;
    }

    .desc {
      font-size: 1rem;
      text-align: left;
    }

    .linebox {
      padding: 30px;
    }

    .blog-meta {
      gap: 15px;
    }
  }

  @media (max-width: 480px) {
    .big-title {
      font-size: 2rem;
    }
    
    .blog-subtitle {
      font-size: 1.5rem;
    }
    
    .linebox {
      padding: 20px;
    }
    
    .blog-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 10px;
    }
  }
</style>
