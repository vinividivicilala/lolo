---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog kosong dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header Section -->
      <section class="header-section">
        <div class="header-content">
          <h1 class="big-title">Blog</h1>
          <a href="/blog/all" class="all-blog-link">
            <span>All Blog</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        </div>
      </section>

      <!-- Blog Content Section -->
      <section class="content-section">
        <div class="linebox">
          <div class="blog-meta">
            <div class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span>15 Mar 2024</span>
            </div>
            <div class="meta-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              <span>5 min read</span>
            </div>
          </div>

          <h2 class="blog-title">Konten Blog Akan Segera Hadir</h2>
          <p class="desc">
            Semua artikel akan tampil di sini dengan desain bersih dan modern. 
            Stay tuned untuk update terbaru!
          </p>

          <div class="tag-list">
            <span class="tag">Astro</span>
            <span class="tag">Blog</span>
            <span class="tag">Coming Soon</span>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background: #f2f3f5;
    color: #222;
    min-height: 100vh;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Header Section */
  .header-section {
    margin-bottom: 40px;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .big-title {
    font-size: 48px;
    font-weight: 800;
    margin: 0;
    color: #111;
  }

  .all-blog-link {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.3rem;
    font-weight: 700;
    color: #2563eb;
    text-decoration: none;
    padding: 12px 24px;
    border: 2px solid #2563eb;
    border-radius: 10px;
    transition: all 0.3s ease;
  }

  .all-blog-link:hover {
    background: #2563eb;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 99, 235, 0.3);
  }

  .all-blog-link svg {
    transition: transform 0.3s ease;
  }

  .all-blog-link:hover svg {
    transform: translateX(3px) translateY(-3px);
  }

  /* Linebox Section */
  .linebox {
    background: transparent;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 0;
    padding: 50px;
    color: #222;
    position: relative;
  }

  .linebox::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0,0,0,0.3), transparent);
  }

  .linebox::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0,0,0,0.3), transparent);
  }

  /* Blog Meta */
  .blog-meta {
    display: flex;
    gap: 25px;
    margin-bottom: 25px;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.95rem;
    color: #666;
  }

  .meta-item svg {
    color: #2563eb;
  }

  /* Blog Title */
  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 25px;
    color: #111;
    line-height: 1.3;
  }

  /* Description */
  .desc {
    font-size: 1.3rem;
    font-weight: 400;
    line-height: 1.8;
    color: #333;
    margin-bottom: 30px;
  }

  /* Tags */
  .tag-list {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .tag {
    background: rgba(37, 99, 235, 0.1);
    color: #2563eb;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    border: 1px solid rgba(37, 99, 235, 0.2);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .linebox {
    animation: fadeInUp 0.8s ease-out;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      text-align: center;
    }

    .big-title {
      font-size: 36px;
    }

    .all-blog-link {
      font-size: 1.1rem;
      padding: 10px 20px;
    }

    .blog-title {
      font-size: 2rem;
    }

    .desc {
      font-size: 1.1rem;
      text-align: left;
    }

    .linebox {
      padding: 30px 20px;
    }

    .blog-meta {
      gap: 15px;
    }
  }

  @media (max-width: 480px) {
    .big-title {
      font-size: 28px;
    }
    
    .blog-title {
      font-size: 1.6rem;
    }
    
    .desc {
      font-size: 1rem;
    }

    .all-blog-link {
      width: 100%;
      justify-content: center;
    }
  }
</style>
