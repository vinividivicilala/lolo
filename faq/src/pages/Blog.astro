---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog | Note Farid" description="Halaman blog dengan desain baru." currentPage="blog">
  <div class="container">
    <main>
      <!-- Header blog -->
      <div class="blog-header">
        <h1 class="blog-title">Blog</h1>
        <a href="/all-blog" class="all-blog-link">All Blog ‚Üí</a>
      </div>

      <!-- Linebox layout -->
      <section class="linebox">
        <div class="linebox-content">
          <div class="meta">
            <span class="meta-item">üìÖ 26 Sep 2025</span>
            <span class="meta-item">‚è± 5 min read</span>
            <span class="label">Tips</span>
          </div>
          <h2 class="post-title">Contoh Artikel Pertama</h2>
          <p class="post-excerpt">
            Ini adalah contoh ringkasan artikel blog dengan desain baru.
            Bagian ini bisa diisi dengan deskripsi singkat artikel.
          </p>
        </div>
        <div class="linebox-bg"></div>
      </section>
    </main>
  </div>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

  body {
    margin: 0;
    padding: 0;
    font-family: 'Inter', sans-serif;
    background: #f2f3f5;
    color: #222;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  /* Blog header */
  .blog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }
  .blog-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #111;
  }
  .all-blog-link {
    font-size: 1rem;
    font-weight: 600;
    color: #0077ff;
    text-decoration: none;
  }
  .all-blog-link:hover {
    text-decoration: underline;
  }

  /* Linebox */
  .linebox {
    position: relative;
    background: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: 16px;
    padding: 40px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    overflow: hidden;
  }

  .linebox-bg {
    background: url('/images/sample-bg.jpg') center/cover no-repeat;
    position: absolute;
    inset: 0;
    opacity: 0.25;
    z-index: 0;
  }

  .linebox-content {
    position: relative;
    z-index: 1;
  }

  .meta {
    display: flex;
    gap: 15px;
    align-items: center;
    margin-bottom: 15px;
    font-size: 0.95rem;
    color: #444;
  }
  .meta-item {
    display: flex;
    align-items: center;
    gap: 4px;
  }
  .label {
    background: #0077ff;
    color: #fff;
    font-size: 0.8rem;
    font-weight: 600;
    padding: 3px 8px;
    border-radius: 8px;
  }

  .post-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 10px;
  }

  .post-excerpt {
    font-size: 1.1rem;
    color: #333;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .blog-title {
      font-size: 2rem;
    }
    .post-title {
      font-size: 1.4rem;
    }
  }
</style>
