  const progressFill = document.querySelector('.progress-fill');
  const currentStep = document.querySelector('.current-step');
  const totalSteps = document.querySelector('.total-steps');

  if (textSection && textContent) {
    // Set total steps
    totalSteps.textContent = textBlocks.length.toString().padStart(2, '0');

    // Calculate scroll distance
    const sectionWidth = textSection.offsetWidth;
    const contentWidth = textContent.scrollWidth;
    const scrollDistance = contentWidth - sectionWidth;

    // GSAP Timeline for horizontal scroll
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: textSection,
        start: 'top top',
        end: () => `+=${scrollDistance}`,
        pin: true,
        scrub: 1,
        anticipatePin: 1,
        onUpdate: self => {
          // Update progress bar
          const progress = self.progress;
          progressFill.style.width = `${progress * 100}%`;
          
          // Update active text block
          updateActiveTextBlock(progress);
        }
      }
    });

    tl.to(textContent, {
      x: () => -scrollDistance,
      ease: 'none',
      duration: 1
    });

    // Text block animations dengan FLIP
    textBlocks.forEach((block, index) => {
      // Initial animation
      gsap.fromTo(block,
        {
          opacity: 0,
          x: 100,
          rotationY: 30
        },
        {
          opacity: 0.4,
          x: 0,
          rotationY: 0,
          duration: 1,
          scrollTrigger: {
            trigger: block,
            start: 'left 80%',
            end: 'left 30%',
            scrub: true,
            toggleActions: 'play none none reverse'
          }
        }
      );

