<style>
  /* Import Google Fonts untuk typography yang lebih modern */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Montserrat:wght@400;500;600;700;800&display=swap');
  
  body {
    background: #f8fafc;
    color: #334155;
    min-height: 100vh;
    font-family: 'Inter', sans-serif;
  }

  /* Styling untuk teks berjalan - MODERN & BESAR */
  .marquee-container {
    overflow: hidden;
    position: relative;
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 25px 0;
    margin-bottom: 40px;
    border-radius: 0;
  }
  
  .marquee-content {
    white-space: nowrap;
    display: inline-block;
    padding-left: 100%;
    animation: marquee 20s linear infinite;
    font-size: 2rem;
    font-weight: 700;
    color: white;
    font-family: 'Montserrat', sans-serif;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  }
  
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
  }
  
  /* Typography improvements dengan font modern */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
  }
  
  /* Animasi Framer Motion */
  [data-framer] {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  [data-framer].animated {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Blok warna besar di bagian bawah */
  .color-block {
    background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
    color: white;
    padding: 60px 20px;
    margin-top: 80px;
    text-align: center;
    width: 100%;
  }
  
  .color-block-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .color-block h2 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    font-weight: 800;
  }
  
  .color-block p {
    font-size: 1.2rem;
    margin-bottom: 30px;
    opacity: 0.9;
  }
  
  .cta-button {
    display: inline-block;
    background: white;
    color: #ff6b6b;
    padding: 15px 35px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  
  /* Container utilities */
  .container {
    width: 100%;
    margin-right: auto;
    margin-left: auto;
  }
  
  @media (min-width: 640px) {
    .container {
      max-width: 640px;
    }
  }
  
  @media (min-width: 768px) {
    .container {
      max-width: 768px;
    }
  }
  
  @media (min-width: 1024px) {
    .container {
      max-width: 1024px;
    }
  }
  
  @media (min-width: 1280px) {
    .container {
      max-width: 1280px;
    }
  }
  
