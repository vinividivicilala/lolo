    margin-bottom: 1.5rem;
  }

  .update-info {
    font-size: 0.8rem;
    color: #64748b;
    font-weight: 500;
  }

  /* Image Container */
  .image-container {
    width: 100%;
    margin: 2rem 0;
  }

  .faq-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  /* Garis Pembatas */
  .divider-line {
    height: 1px;
    background: #e2e8f0;
    margin: 2rem 0;
    width: 100%;
  }

