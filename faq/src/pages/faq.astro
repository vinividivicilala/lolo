    color: white;
  }

  .new-label.blue { background: #3b82f6; }
  .new-label.green { background: #10b981; }
  .new-label.purple { background: #8b5cf6; }
  .new-label.orange { background: #f97316; }
  .new-label.red { background: #ef4444; }

