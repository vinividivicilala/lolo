<Layout>
  <html lang="id">
    <head>
      <title>FAQ | Astro Example</title>
      <meta name="description" content="Halaman FAQ dengan animasi, gambar, dan icon." />
    </head>
    <body>
      <div class="container">
        <main>
          <h1 class="page-title">‚ùì Frequently Asked Questions</h1>
          
          <div class="update-info">
            Last update: <span id="currentDate"></span>
          </div>

          <div class="image-container">
            <img src="/images/5.jpg" alt="Ilustrasi FAQ" class="faq-image" />
          </div>

          <div class="faq-container">
            {faqData.map((faq, index) => (
              <FAQItem 
                index={faq.index} 
                icon={faq.icon} 
                question={faq.question}
                isLast={index === faqData.length - 1}
              >
                {@html faq.answer}
              </FAQItem>
            ))}
          </div>
          
          <!-- Bagian Media Sosial Full Width yang Diperbesar -->
          <div class="social-fullwidth-expanded">
            <div class="social-container-expanded">
              <h2>Follow Me On Social Media</h2>
              <p class="social-subtitle">Stay connected and get the latest updates</p>
              
              <div class="social-icons-expanded">
                <a href="#" class="social-icon-expanded">
                  <i data-lucide="github"></i>
                  <span>GitHub</span>
                  <p>Check out my projects and code</p>
                </a>
                <a href="#" class="social-icon-expanded">
                  <i data-lucide="linkedin"></i>
                  <span>LinkedIn</span>
                  <p>Connect professionally</p>
                </a>
                <a href="#" class="social-icon-expanded">
                  <i data-lucide="twitter"></i>
                  <span>Twitter</span>
                  <p>Follow for quick updates</p>
                </a>
                <a href="#" class="social-icon-expanded">
                  <i data-lucide="instagram"></i>
                  <span>Instagram</span>
                  <p>See behind the scenes</p>
                </a>
                <a href="#" class="social-icon-expanded">
                  <i data-lucide="youtube"></i>
                  <span>YouTube</span>
                  <p>Watch tutorials and demos</p>
                </a>
                <a href="#" class="social-icon-expanded">
                  <i data-lucide="message-circle"></i>
                  <span>Discord</span>
                  <p>Join the community</p>
                </a>
              </div>
              
              <div class="newsletter-section">
                <h3>Subscribe to Newsletter</h3>
                <p>Get the latest updates directly to your inbox</p>
                <form class="newsletter-form">
                  <input type="email" placeholder="Enter your email address" required />
                  <button type="submit">Subscribe</button>
                </form>
              </div>
            </div>
          </div>
        </main>
      </div>
    </body>
  </html>
</Layout>

<style>
  body {
    background: #fff;
    color: #333;
    min-height: 100vh;
    padding: 0;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .page-title {
    text-align: center;
    margin-bottom: 30px;
    font-size: 2.5rem;
    font-weight: 700;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 1px;
    color: #333;
  }
  
  .update-info {
    text-align: right;
    margin-bottom: 20px;
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }
  
  .image-container {
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
  }
  
  .faq-image {
    max-width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: contain;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border: 1px solid #ddd;
  }
  
  .faq-container {
    display: flex;
    flex-direction: column;
    gap: 40px;
    position: relative;
  }
  
  /* Social Media Full Width Section - Diperbesar */
  .social-fullwidth-expanded {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin: 60px calc(-50vw + 50%);
    padding: 60px 20px;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    transform: translateX(-50%);
    color: white;
  }
  
  .social-container-expanded {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }
  
  .social-container-expanded h2 {
    color: white;
    margin-bottom: 15px;
    font-size: 2.5rem;
    font-weight: 700;
  }
  
  .social-subtitle {
    margin-bottom: 40px;
    font-size: 1.2rem;
    opacity: 0.9;
  }
  
  .social-icons-expanded {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-bottom: 50px;
  }
  
  .social-icon-expanded {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
    padding: 30px 20px;
    border-radius: 15px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .social-icon-expanded:hover {
    transform: translateY(-8px);
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }
  
  .social-icon-expanded i {
    width: 60px;
    height: 60px;
    margin-bottom: 20px;
    color: white;
  }
  
  .social-icon-expanded span {
    font-weight: 700;
    font-size: 1.4rem;
    margin-bottom: 10px;
  }
  
  .social-icon-expanded p {
    opacity: 0.8;
    font-size: 0.95rem;
    margin: 0;
  }
  
  .newsletter-section {
    background: rgba(255, 255, 255, 0.1);
    padding: 40px;
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .newsletter-section h3 {
    margin-top: 0;
    margin-bottom: 10px;
    font-size: 1.8rem;
  }
  
  .newsletter-section p {
    margin-bottom: 25px;
    opacity: 0.9;
  }
  
  .newsletter-form {
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .newsletter-form input {
    flex-grow: 1;
    min-width: 250px;
    padding: 15px 20px;
    border: none;
    border-radius: 50px;
    background: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
  }
  
  .newsletter-form button {
    padding: 15px 30px;
    border: none;
    border-radius: 50px;
    background: #ff6b6b;
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }
  
  .newsletter-form button:hover {
    background: #ff5252;
    transform: translateY(-2px);
  }
  
  /* Animasi Framer Motion */
  [data-framer] {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  [data-framer].animated {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    
    .social-icons-expanded {
      grid-template-columns: 1fr;
    }
    
    .social-icon-expanded {
      padding: 20px 15px;
    }
    
    .social-icon-expanded i {
      width: 50px;
      height: 50px;
    }
    
    .newsletter-form {
      flex-direction: column;
    }
    
    .newsletter-form input,
    .newsletter-form button {
      width: 100%;
    }
  }
</style>

<script>
  // Menampilkan tanggal dan waktu terbaru
  document.addEventListener('DOMContentLoaded', function() {
    const now = new Date();
    const options = { 
      weekday: 'long', 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    };
    const dateTimeStr = now.toLocaleDateString('id-ID', options);
    document.getElementById('currentDate').textContent = dateTimeStr;

    // Inisialisasi Lucide icons
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }

    // Animasi dengan Intersection Observer
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animated');
        }
      });
    }, observerOptions);

    // Amati semua elemen dengan data-framer
    document.querySelectorAll('[data-framer]').forEach(el => {
      observer.observe(el);
    });

    // Animasi untuk gambar
    const image = document.querySelector('.faq-image');
    if (image) {
      image.style.opacity = '0';
      image.style.transform = 'scale(0.9)';
      image.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
      
      setTimeout(() => {
        image.style.opacity = '1';
        image.style.transform = 'scale(1)';
      }, 300);
    }

    // Animasi untuk judul
    const title = document.querySelector('.page-title');
    if (title) {
      title.style.opacity = '0';
      title.style.transform = 'translateY(-20px)';
      title.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
      
      setTimeout(() => {
        title.style.opacity = '1';
        title.style.transform = 'translateY(0)';
      }, 100);
    }
  });
</script>
