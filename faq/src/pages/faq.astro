  .social-icon {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    text-decoration: none;
    color: #334155;
    transition: all 0.3s ease;
    border: 1px solid #e2e8f0;
  }

  .social-icon:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
