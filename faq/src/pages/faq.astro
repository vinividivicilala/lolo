    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    background: linear-gradient(90deg, #f1f5f9, #e2e8f0, #f1f5f9);
    padding: 0.5rem 0;
    overflow: hidden;
    margin-bottom: 2rem;
    border-top: 1px solid #cbd5e1;
    border-bottom: 1px solid #cbd5e1;
  }

  .marquee-content-large {
    white-space: nowrap;
    animation: marquee 25s linear infinite;
    font-size: 0.9rem;
    color: #475569;
    letter-spacing: 0.5px;
  }

  @keyframes marquee {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  /* Layout Typografi Kiri */
  .typography-left-layout {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .title-section {
    flex: 1;
    min-width: 300px;
  }

  .title-accent {
    font-size: 0.8rem;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 0.5rem;
  }

  .page-title {
    font-size: 3rem;
