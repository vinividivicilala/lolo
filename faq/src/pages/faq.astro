    0% { transform: translate(0, 0); }
    100% { transform: translate(-100%, 0); }
  }

  /* Layout Typografi Kiri */
  .typography-left-layout {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;
    gap: 2rem;
  }

  .title-section {
    flex: 1;
  }

  .title-accent {
    font-size: 1rem;
    font-weight: 700;
    color: #3b82f6;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 0.5rem;
  }

  .page-title {
    font-size: 3.5rem;
    font-weight: 700;
