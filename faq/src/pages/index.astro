    function updateLastUpdateTime() {
      const now = new Date();
      const options = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit'
      };
      lastUpdateTimeEl.textContent = now.toLocaleDateString('id-ID', options);
