        setTimeout(() => {
          wrapper.classList.add('fade-out');
          setTimeout(() => {
            if (wrapper.parentNode) {
              wrapper.parentNode.removeChild(wrapper);
              updateFeedbackCount(); // Update count setelah remove
            }
          }, 600);
        }, 30000);
      }

      return wrapper;
    }

    // Submit form
    if (feedbackForm) {
