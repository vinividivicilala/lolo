<style>
  body {
    background: #000;
    color: #fff;
    min-height: 100vh;
    padding: 0;
    margin: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .home-container {
    padding: 40px 0;
  }
  
  .hero-section {
    text-align: center;
    padding: 80px 0;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
  }
  
  .hero-subtitle {
    font-size: 1.3rem;
    max-width: 600px;
    margin: 0 auto 60px;
    opacity: 0.8;
    color: #ccc;
  }
  
  .linebox {
    border-radius: 12px;
    padding: 30px;
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
 border: 1px solid rgba(255, 255, 255, 0.3); /* garis putih pudar */
  }
  
.linebox-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 15px;
  border-radius: 8px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: 1px solid rgba(255, 255, 255, 0.3); /* garis putih pudar */
  background: none; /* hilangkan fill background */
}


  
  .linebox-item svg {
    color: #667eea;
    margin-bottom: 15px;
  }
  
  .linebox-item span {
    font-weight: 600;
    color: #fff;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .linebox {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      padding: 20px;
    }
  }
  
  @media (max-width: 480px) {
    .linebox {
      grid-template-columns: 1fr;
    }
  }



.timeline-container {
  position: relative;
  max-width: 1100px;
  margin: 0 auto;
}

/* garis vertikal putus-putus */
.timeline-container::before {
  content: "";
  position: absolute;
  left: 28px; /* sejajar dengan dot */
  top: 0;
  bottom: 0;
  border-left: 2px dashed rgba(255, 255, 255, 0.2);
  z-index: 1;
}

/* item */
.timeline-item {
  display: grid;
  grid-template-columns: 60px 1fr 1fr;
  gap: 20px;
  margin-bottom: 50px;
  position: relative;
}

/* dot */
.timeline-dot {
  position: absolute;
  left: 20px;
  top: 20px;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: #222;
  border: 2px solid rgba(255,255,255,0.4);
  z-index: 2;
}
.timeline-dot.active {
  background: #fff;
  border-color: #6ea6ff;
  box-shadow: 0 0 12px #6ea6ff, 0 0 24px #6ea6ff;
  animation: blink 1.6s infinite;
}
@keyframes blink {
  0% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(1.1); }
  100% { opacity: 1; transform: scale(1); }
}

/* linebox style */
.linebox {
  background: rgba(0,0,0,0.6);
  border: 1px solid rgba(255,255,255,0.2);
  padding: 22px 24px;
  border-radius: 8px;
}

/* kiri */
.timeline-left {
  display: flex;
  flex-direction: column;
  gap: 12px;
}
.date {
  font-size: 18px;
  font-weight: 600;
  color: #9dbbff;
}
.title {
  font-size: 28px;
  font-weight: 700;
  color: #fff;
  margin: 0;
}
.label {
  display: inline-block;
  padding: 6px 12px;
  font-size: 14px;
  background: rgba(255,255,255,0.08);
  border: 1px solid rgba(255,255,255,0.25);
  border-radius: 6px;
  color: #fff;
  text-transform: uppercase;
}

/* kanan */
.timeline-right .text {
  font-size: 18px;
  line-height: 1.6;
  color: #ddd;
}

/* responsive */
@media (max-width: 768px) {
  .timeline-item {
    grid-template-columns: 60px 1fr;
  }
  .timeline-right {
    grid-column: 2 / 3;
  }
}








</style>


