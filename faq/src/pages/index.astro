/* Legal Section Styles */
.legal-section {
  margin: 60px auto; /* Centers the section */
  max-width: 800px;
  margin-bottom: 29px;
  margin-top: 30px;
  display: flex;
  justify-content: center; /* Centers the content horizontally */
}

.legal-linebox {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 16px;
  padding: 30px;
  backdrop-filter: blur(10px);
  width: 100%; /* Makes sure it takes full width of its parent */
  max-width: 800px; /* Restricts the width */
}





.legal-content {
  display: flex;
  align-items: center;
  gap: 20px;
  margin-bottom: 25px;
}

.legal-icon svg {
  color: #9dbbff;
}

.legal-text h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin: 0 0 5px 0;
  color: #fff;
}

.legal-text p {
  margin: 0;
  color: #ccc;
  opacity: 0.8;
}

.legal-arrow svg {
  color: rgba(255, 255, 255, 0.6);
  margin-left: auto;
}

.legal-links {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

.legal-link {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 20px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 8px;
  color: #fff;
  text-decoration: none;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.05);
}

.legal-link:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.5);
  transform: translateY(-2px);
}

.legal-link svg {
  color: #9dbbff;
}

/* Responsive */
@media (max-width: 768px) {
  .legal-content {
    flex-direction: column;
    text-align: center;
    gap: 15px;
  }
  
  .legal-arrow {
    display: none;
  }
  
  .legal-links {
    flex-direction: column;
  }
}


  

</style>


