<style>

  body {
    background: #000;
    color: #fff;
    min-height: 100vh;
    padding: 0;
    margin: 0;
     font-family: 'Space Mono', monospace;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }
  
  .home-container {
    padding: 40px 0;
  }
  
  .hero-section {
    text-align: center;
    padding: 80px 0;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 20px;
    font-family: 'Montserrat', sans-serif;
    color: #fff;
  }
  
  .hero-subtitle {
    font-size: 1.3rem;
    max-width: 600px;
    margin: 0 auto 60px;
    opacity: 0.8;
    color: #ccc;
  }
  
  .linebox {
    border-radius: 12px;
    padding: 30px;
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
 border: 1px solid rgba(255, 255, 255, 0.3); /* garis putih pudar */
  }
  
.linebox-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 15px;
  border-radius: 8px;
  transition: all 0.3s ease;
  cursor: pointer;
  border: 1px solid rgba(255, 255, 255, 0.3); /* garis putih pudar */
  background: none; /* hilangkan fill background */
}


  
  .linebox-item svg {
    color: #667eea;
    margin-bottom: 15px;
  }
  
  .linebox-item span {
    font-weight: 600;
    color: #fff;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.2rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }
    
    .linebox {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
      padding: 20px;
    }
  }
  
  @media (max-width: 480px) {
    .linebox {
      grid-template-columns: 1fr;
    }
  }


/* Import Space Mono */
@import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap');

.timeline-section {
  font-family: 'Space Mono', monospace;
}

.timeline-container {
  position: relative;
  max-width: 1100px;
  margin: 0 auto;
  padding-left: 60px; /* jarak garis ke konten kiri */
}

/* garis vertikal putus-putus */
.timeline-container::before {
  content: "";
  position: absolute;
  left: 28px;
  top: 0;
  bottom: 0;
  border-left: 2px dashed rgba(255, 255, 255, 0.25);
  z-index: 1;
}



.timeline-item {
  position: relative;
  margin-bottom: 80px;
  padding-left: 60px; /* geser isi biar dekat garis */
}

.timeline-content {
  display: flex;
  flex-direction: row;
  gap: 30px;
  align-items: flex-start; /* sejajar dari atas */
}

/* dot */
.timeline-dot {
  position: absolute;
  left: 20px;
  top: 20px;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: #222;
  border: 2px solid rgba(255,255,255,0.4);
  z-index: 2;
}
.timeline-dot.active {
  background: #fff;
  border-color: #6ea6ff;
  box-shadow: 0 0 12px #6ea6ff, 0 0 24px #6ea6ff;
  animation: blink 1.6s infinite;
}

/* garis putus-putus */
.timeline-line {
  position: absolute;
  left: 28px;
  top: 0;
  bottom: 0;
  border-left: 2px dashed rgba(255,255,255,0.25);
  z-index: 1;
}

/* kiri */
.timeline-left {
  min-width: 220px;
  text-align: left;
}
.date {
  font-size: 20px;
  font-weight: 600;
  color: #9dbbff;
}
.title {
  font-size: 32px;
  font-weight: 700;
  margin: 6px 0;
  color: #fff;
}
.label.linebox {
  display: inline-block;
  background: rgba(0,0,0,0.6);
  border: 1px solid rgba(255,255,255,0.3);
  padding: 10px 16px;
  border-radius: 8px;
  font-size: 16px;
  color: #fff;
  text-transform: uppercase;
}

/* kanan */
.timeline-right.linebox {
  flex: 1;
  background: rgba(0,0,0,0.6);
  border: 1px solid rgba(255,255,255,0.3);
  padding: 28px 32px;
  border-radius: 8px;
  text-align: left;
}
.timeline-right .text {
  font-size: 20px;
  line-height: 1.7;
  color: #ddd;
}

/* responsive */
@media (max-width: 768px) {
  .timeline-content {
    flex-direction: column;
  }
  .timeline-left {
    min-width: unset;
  }
}



</style>









