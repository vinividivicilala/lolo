{
  "compilerOptions": {
    /* ===== Dasar ===== */
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,

    /* ===== React & JSX ===== */
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* ===== Output Build ===== */
    "noEmit": true,
    "incremental": true,

    /* ===== Typings ===== */
    "types": ["react", "react-dom", "node"],

    /* ===== Base URL ===== */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
